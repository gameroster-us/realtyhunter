<% provide(:title, 'Units') %>
<h1>Units</h1>


<%= link_to 'Add a Unit', new_unit_path %>

<div class="row">
  <div class="col-md-2">
    <%= form_tag units_path, :method => 'get' do %>
      Search:
      <%= text_field_tag :search, params[:search], placeholder: "name/address", size: 50 %>
      <%= submit_tag "Go", :name => nil %>
      <%= link_to "Clear All Filters", users_path, class: 'btn btn-xs btn-default' %>
      
      <!-- TODO: sortable columns -->
    <% end %>
  </div>
  <div class="col-md-offset-10">
    <%= link_to 'Add a Unit', new_unit_path %><br />
    <%= will_paginate @units %>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    
    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th>Address</th>
          <th>Landlord Name</th>
          <th>Access</th>
          <th>Bed / Bath</th>
          <th>Available</th>
          <th>Rent</th>
          <th>Updated</th>
          <th>Status</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @units.each do |unit| %>
          <tr>
            <td><%= unit.address %></td>
            <td><%= unit.landlord.code %></td>
            <td><%= unit.access %></td>
            <td><%= unit.beds %> / <%= unit.baths %></td>
            <td><%= unit.available_by %></td>
            <td><%= unit.rent %></td>
            <td><%= unit.updated_at %></td>
            <td><%= unit.status %></td>
            <td><%= link_to 'Show', unit %> | 
              <%= link_to 'Edit', edit_unit_path(unit) %> | 
              <%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-10">
    <%= will_paginate @units %>
  </div>
</div>

