<% provide(:title, @company.name + ' Offices') %>

<div class="row">
  <div class="col-sm-7">
    <h1><%= @company.name %> Offices</h1>
  </div>
  <div class="hidden-xs hidden-sm col-sm-5 form-label-responsive page-header-buttons">
    <% if current_user.is_company_admin? %>
      <%= link_to 'New Office', new_company_office_path %>
    <% end %>
  </div>
  <div class="hidden-md hidden-lg col-sm-5 col-sm-left-padding form-label-responsive page-header-buttons-lg">
  <% if current_user.is_company_admin? %>
      <%= link_to 'New Office', new_company_office_path %>
    <% end %>
  </div>
</div>

<% if @offices %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover table-condensed infinite-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Street Address</th>
          <th>Telephone</th>
          <th>Fax</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @offices %>
      </tbody>
    </table>
  </div>
</div>

<% else %>
  <p>No offices listed yet. Why don't you <%= link_to 'create one', new_company_office_path %>?</p>
<% end %>
