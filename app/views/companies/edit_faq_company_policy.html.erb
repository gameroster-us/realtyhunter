<h3>FAQ / Company Policy Edit</h3>
<%= form_tag update_faq_company_policy_path, multipart: true do %>
	<%= text_area_tag :faq_company_policy, @company.faq_company_policy, as: :ckeditor, class: 'form-control ckeditor',rows: 15 %>
	<br>
	<div class="col-md-2">
		<%= submit_tag "Submit",class: "btn btn-warning btn-block" %>
	</div>
<% end %>
<script type="text/javascript">
  (function()
    {
      if( window.localStorage )
      {
        if( !localStorage.getItem( 'firstLoad' ) )
        {
          localStorage[ 'firstLoad' ] = true;
          window.location.reload();
        }
        else
          localStorage.removeItem( 'firstLoad' );
      }
    })();
</script>