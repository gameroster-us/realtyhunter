<div class="row">
  <div class="col-md-12">
    <%= form_for(@company) do |f| %>
      <%= render :partial => 'shared/error_messages', 
        :locals => {:model => @company} %>

      <div class="field">
        <%= f.label :name, "Company name", class: 'required' %><br>
        <%= f.text_field :name, class: 'form-control required' %>
      </div>

      <div class="field">
        <%= f.label :name, "Website" %><br>
        <%= f.text_field :website, class: 'form-control' %>
      </div>

      <!-- User image form -->
      <div class="row">
        <div class="col-md-12">
          <div class="logo">
            <%= render 'image', :locals => {:company => @company} %>
          </div>
        </div>
      </div>

      <br />
      <div class="row">
        <div class="col-md-12">
          <%= f.label :file, "Upload new photo" %><br>
          <%= f.file_field :file, class: 'form-control' %><br>
        </div>
      </div>

      <!-- TODO: later on make all environment fields editable -->
