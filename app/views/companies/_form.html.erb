      <!--div class="field">
        <br /-->
        <!--%= f.label :agent_types, "Agent specializations: (separate by comma or newline)" %-->
        <!--%= f.text_area :agent_types, class: 'form-control', rows: 5 %-->
      <!--/div>
      <div class="field"-->
        <!--%= f.label :employee_titles, "Departments: (separate by comma or newline)" %-->
        <!--%= f.text_area :employee_titles, class: 'form-control', rows: 8 %-->
      <!--/div-->

      <br />
      <div class="row">
        <div class="col-md-12">
          <%= f.label :privacy_policy %><br>
          <%= f.bootsy_area :privacy_policy, class: 'form-control', rows: 15, editor_options: { image: false } %><br>
        </div>
      </div>

      <br />
      <div class="row">
        <div class="col-md-12">
          <%= f.label :terms_conditions, "Terms & Conditions" %><br>
          <%= f.bootsy_area :terms_conditions, class: 'form-control', rows: 15, editor_options: { image: false } %><br>
        </div>
      </div>

      <div class="actions">
        <%= f.submit class:'btn btn-warning' %>
      </div>
    <% end %>
  </div>
