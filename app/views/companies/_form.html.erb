<%= form_for(@company) do |f| %>
    <%= f.hidden_field :lock_version %>
    <%= render partial: 'shared/error_messages', locals: {model: @company} %>

      <div class="row">
        <div class="col-md-2">
          <%= f.label :name, class: 'required' %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :name, class: 'form-control required' %>
        </div>
      </div>

      <br>
      <div class="row">
        <div class="col-md-2">
          <%= f.label :name, "Website" %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :website, class: 'form-control' %>
        </div>
      </div>

      <!-- User image form -->
      <br>
      <div class="row">
        <div class="col-md-12">
          <div class="logo">
            <%= render 'image', locals: {company: @company} %>
          </div>
        </div>
      </div>

      <br>
      <div class="row">
        <div class="col-md-12">
          <%= f.label :file, "Upload new photo" %><br>
          <%= f.file_field :file, class: 'form-control' %><br>
        </div>
      </div>

      <br>
      <div class="row">
        <div class="col-md-12">
          <%= f.label :privacy_policy %><br>
          <%= f.bootsy_area :privacy_policy, class: 'form-control', rows: 15, editor_options: { image: false } %><br>
        </div>
      </div>

      <br>
      <div class="row">
        <div class="col-md-12">
          <%= f.label :terms_conditions, "Terms & Conditions" %><br>
          <%= f.bootsy_area :terms_conditions, class: 'form-control', rows: 15, editor_options: { image: false } %><br>
        </div>
      </div>

      <br>
      <div class="row vertical-margin-lg">
        <div class="col-md-6 col-md-offset-3">
          <div class="actions">
            <%= f.submit 'Update', class:"btn btn-warning btn-block" %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
