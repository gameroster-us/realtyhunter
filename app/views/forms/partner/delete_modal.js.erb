$('#entryDeleteModal .modal-body').html(
	"Are you sure you want to delete <%= j(@entry.name) %>? Deletion is permanent. There is no undo!");

$('#entryDeleteModal .delete-btn').replaceWith("<%= j(link_to 'Delete', forms_partner_path(@entry, @params_copy.permit!), remote: true, method: :delete, class: 'btn btn-danger delete-btn link-as-button', id: 'delete-link') %>");
$('#entryDeleteModal .delete-btn').click( function(event) {
	$('#entryDeleteModal').modal('hide');
	event.preventDefault();
});

$('#entryDeleteModal').modal('show');
