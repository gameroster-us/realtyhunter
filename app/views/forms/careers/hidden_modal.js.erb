$('#entryArchiveModal .modal-body').html(
	"Are you sure you want to deactivate <%= j(@entry.name) %>? Deactivation will allow them to show up in searches again.");

$('#entryArchiveModal .delete-btn').replaceWith("<%= j(link_to 'Mark Inactive', forms_career_path(@entry), remote: true, method: :delete, class: 'btn btn-danger delete-btn link-as-button', id: 'delete-link') %>");
$('#entryArchiveModal #delete-link').click( function(event) {
	$('#entryArchiveModal').modal('hide');
	event.preventDefault();
});

$('#entryArchiveModal').modal('show');
