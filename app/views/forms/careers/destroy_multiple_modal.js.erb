$('#entryDeleteMultipleModal .modal-body').html(
	"Are you sure you want to delete <br><br><%= @entries.map(&:name).join('<br>').html_safe %> <br><br>Deleting them is permanent and will completely erase their info!");

$('#entryDeleteMultipleModal .submit-link').replaceWith("<%= j(link_to 'Delete', destroy_multiple_forms_careers_path(ids: @entries.map(&:id)), remote: true, method: :delete, class: 'btn btn-danger delete-btn link-as-button submit-link', id: 'delete-link') %>");

$('#entryDeleteMultipleModal .submit-link').click( function(event) {
	$('#entryDeleteMultipleModal').modal('hide');
	event.preventDefault();
});

$('#entryDeleteMultipleModal').modal('show');
