<div class="row">
  <div class="col-md-offset-3 col-md-5">

  <% provide(:title, 'Change your default password') %>
  <h1>Change your default password</h1>
  
  <p>Once you get done, you'll be able to view our listings.</p>
  <%= form_for(@user, url: added_by_admin_path(params[:id])) do |f| %>
    <%= render 'shared/user_error_messages' %>

    <%= hidden_field_tag :email, @user.email %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
    <br />
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
    <br />
    <%= f.submit "Update password", class: "btn btn-primary" %>
  <% end %>
      
  </div>
</div>