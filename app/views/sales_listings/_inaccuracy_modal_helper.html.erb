<%= form_for(sales_unit, url: send_inaccuracy_sales_listing_path(@sales_unit), remote: true) do |f| %>

	<div class="modal-body">
		<p>What's wrong at <%= @sales_unit.unit.building.street_address %> 
		#<%= @sales_unit.unit.building_unit %>? The more detail you can provide, the better.</p>
		<br />
		<div class="field">
	    <%= f.text_area :inaccuracy_description, rows: 5, class: 'form-control' %>
	  </div>
	</div>
	<div class="modal-footer">
		<%= f.submit 'Send', class: 'btn btn-warning submit-link' %>
	  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	</div>

<% end %>
