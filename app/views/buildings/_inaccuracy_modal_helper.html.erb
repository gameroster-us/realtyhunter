<%= form_for(building, url: building_send_inaccuracy_path(@building), remote: true) do |f| %>

	<div class="modal-body">
		<div class="field">
	    <%= f.label :inaccuracy_description, "What's wrong at #{building.street_address}?" %><br>
	    <%= f.text_area :inaccuracy_description, rows: 5, class: 'form-control' %>
	  </div>
	</div>
	<div class="modal-footer">
		<%= f.submit 'Submit', class: 'btn btn-primary submit-link' %>
	  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	</div>

<% end %>
