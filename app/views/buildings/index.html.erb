<script>
   //unobstrusive: attach method call here
   //call when typing or enter or focus leaving
  function initialize() {
    function doSearch(event) {
      $.ajax({
        url: "<%= filter_buildings_path %>",
        data: {
          filter: $('#filter').val(),
          active_only: $('#checkbox_active').checked
        },
        dataType: "script"
      }).fail(function() {
        //console.log("[FAILED] search update failed");
      });
    };

    // search as user types
    var timer;
    function throttledSearch() {
      clearInterval(timer); //clear any interval on key up
      timer = setTimeout(doSearch, 500);
    };
    
    // change enter key to tab
    function preventEnter(event) {
      if (event.keyCode == 13) {
        $('#checkbox_active').focus();
        return false;
      }
    };

    $('#filter').keydown(preventEnter);
    $('#filter').keyup(throttledSearch);
    // toggle between active and inactive units
    $('#checkbox_active').click(doSearch);
  };
  // TODO: get rid of document.ready
  $(document).ready(initialize);
</script>

<% provide(:title, 'Buildings') %>
<div class="page-header">
  <div class="row">
    <div class="col-md-6">
      <h1>Buildings</h1>
    </div>
    <div class="col-md-6 form-label-responsive">
      <% if current_user.is_management? %>
        <%= link_to 'Add a building', new_building_path %> |
      <% end %>
      <%= link_to 'Download CSV', buildings_path(format: :csv) %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-3 vertical-padding">
    <%= form_tag buildings_path, :method => 'get' do %>
      <%= label_tag(:filter, "Filter:") %>
      <%= text_field_tag :filter, params[:code_name], 
        placeholder: "name/address", size: 25 %>
  </div>
  <div class="col-xs-12 col-md-3 vertical-padding">
      <%= check_box_tag(:checkbox_active, class: "checkbox inline") %>
      <%= label_tag :checkbox_active, "Has active units" %>
    <% end %>
  </div>
  <div class="col-xs-12 col-md-6 form-label-responsive">
    <%= render partial: 'shared/pagination', locals: {models: @buildings} %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
      
    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th><%= sortable "formatted_street_address" %></th>
          <th><%= sortable "active_units_count" %></th>
          <th><%= sortable "total_units_count" %></th>
          <th><%= sortable "last_unit_updated" %></th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody class="buildings_table_body">
        <%# Template Dependency: buildings/building %>
        <%= render @buildings %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <%= render partial: 'shared/pagination', locals: {models: @buildings} %>
  </div>
</div>

