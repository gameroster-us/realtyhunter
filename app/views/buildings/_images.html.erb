<% @building.images.each_with_index do |image, idx| %>
	  <div class="col-xs-6 sortable-img img" data-id="<%= image.id %>" data-bldg-id="<%= @building.id %>">
	  	<%= image_tag image.file.url(:large),
          class: 'img-responsive img-medium center-block',
            alt: image.file.url(:large) %>
	  	<%= link_to "Remove", "",
	  		class: 'btn btn-xs btn-link center-block delete-bldg-img',
	  		"data-id": image.id, "data-bldg-id": @building.id %>
	  </div>
<% end %>
