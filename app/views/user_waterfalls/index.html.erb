<% provide(:title, 'Waterfall Plan') %>

<div id="waterfall">
<div id="get-rates-url" data-path="<%= get_rate_user_waterfalls_path %>">

<div class="page-header">
  <div class="row">
    <div class="col-md-6">
      <h1>Waterfall Plan</h1>
    </div>
    
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <i class="fa fa-spinner fa-pulse fa-5x listings-spinner-desktop"></i>

    <div id="waterfall-search-filters" data-search-path="<%= filter_user_waterfalls_path %>">

    <%= form_tag user_waterfalls_path, :method => 'get' do %>
      <div class="row vertical-padding">
        <div class="col-xs-1">
          <strong>Filter By:</strong>
        </div>
        <div class="col-xs-3 col-sm-left-padding">
          <%= text_field_tag :parent_agent, params[:parent_agent], 
            placeholder: "Parent Agent", class:"form-control", size:30 %>
        </div>
        <div class="col-xs-3 col-sm-left-padding">
          <%= text_field_tag :child_agent, params[:child_agent], 
            placeholder: "Child Agent", class:"form-control", size:30 %>
        </div>
        <div class="col-xs-1">
          <%= label_tag :level, "Level:", class: 'pull-right' %>
        </div>
        <div class="col-xs-1 col-sm-left-padding">
          <%= select_tag(:level, 
            options_for_select(['Any', '1', '2', '3'], 
            params[:level] ? params[:level] : "Any"),
            class:"form-control", id: 'level_filter') %>
        </div>
      </div>

    <% end %>
    </div>
  </div>
</div>

<hr />
<div class="row">
  <div class="col-md-6">
    
    <span class="totals">
      &nbsp;&nbsp;<%= @entries.total_count %> Entries found
    </span>
  </div>
  <div class="col-md-6">
    <div class="form-label-responsive">
      <%= render partial: 'shared/pagination', locals: {models: @entries} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <br />
    <div class="table_partial">
      <%= render partial: 'user_waterfalls/table', locals: {entries: @entries, new_entry: @new_entry} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12 form-label-responsive">
    <%= render partial: 'shared/pagination', locals: {models: @entries} %>
  </div>
</div>


