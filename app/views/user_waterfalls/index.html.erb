<% provide(:title, 'Waterfall Plan') %>

<div id="waterfall">
<div id="get-rates-url" data-path="<%= get_rate_user_waterfalls_path %>">

<div class="page-header">
  <div class="row">
    <div class="col-md-6">
      <h1>Waterfall Plan</h1>
    </div>
    
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <strong>Enter a new waterfall connection:</strong>
    <table class="table-hover table-condensed table-responsive">
    <%= form_for(@new_entry, remote: true) do |f| %>
    <%= render :partial => 'shared/error_messages', :locals => {:model => @new_entry} %>
    <tr>
      <td>
        <%= f.select(:parent_agent_id, 
          options_for_select(current_user.company.users.collect {|u| [u.name, u.id]},
            []), 
          {prompt: "Choose Parent..."},
          class: 'form-control',
          include_blank: true, required: true) %>
      </td>
      <td>
        <%= f.select(:child_agent_id, 
          options_for_select(current_user.company.users.collect {|u| [u.name, u.id]},
            []), 
          {prompt: "Choose Child..."},
          class: 'form-control',
          include_blank: true, required: true) %>
      </td>
      <td>
        <%= f.select(:level, 
          options_for_select(['1', '2', '3']), 
          {prompt: "Choose Level..."},
          class:"form-control", 
          include_blank: true, required: true) %>
      </td>
      <td>
        <%= f.text_field :rate, class: "form-control", required: true %>
      </td>
      <td>
        <%= f.submit "Add", class: "form-control" %>
      </td>
      <td>
        
      </td>
    </tr>
    </table>
    <% end %>
  </div>
</div>

<hr />
<div class="row">
  <div class="col-md-12">
    <i class="fa fa-spinner fa-pulse fa-5x forms-spinner-desktop"></i>

    <div id="waterfall-search-filters" data-search-path="<%= filter_user_waterfalls_path %>">

    <%= form_tag user_waterfalls_path, :method => 'get' do %>
      <div class="row vertical-padding vertical-align">
        <div class="col-xs-1">
          <strong>Filter By:</strong>
        </div>
        <div class="col-xs-3 col-sm-left-padding">
          <%= autocomplete_field_tag :parent_agent, params[:parent_agent], 
            autocomplete_user_name_user_waterfalls_path,
            update_elements: {},
            placeholder: "Parent Agent", 
            size: 25, class:'form-control' %>
        </div>
        <div class="col-xs-3 col-sm-left-padding">
          <%= autocomplete_field_tag :child_agent, params[:child_agent], 
            autocomplete_user_name_user_waterfalls_path,
            update_elements: {},
            placeholder: "Child Agent", 
            size: 25, class:'form-control' %>
        </div>
        <div class="col-xs-1">
          <%= label_tag :level, "Level:", class: 'pull-right' %>
        </div>
        <div class="col-xs-1 col-sm-left-padding">
          <%= select_tag(:level, 
            options_for_select(['Any', '1', '2', '3'], 
            params[:level] ? params[:level] : "Any"),
            class:"form-control") %>
        </div>
      </div>

    <% end %>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <br />    
    <span class="totals">
      &nbsp;&nbsp;<%= @entries.total_count %> Entries found
    </span>
  </div>
  <div class="col-md-6">
    <div class="form-label-responsive">
      <%= render partial: 'shared/pagination', locals: {models: @entries} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div id="waterfall_table_partial">
      <table class="table table-striped table-hover table-condensed table-responsive">
        <thead>
          <tr>
            <th data-sort="parent_agent_name" class="th-sortable">Parent Agent</th>
            <th data-sort="child_agent_name" class="th-sortable">Child Agent</th>
            <th data-sort="level" class="th-sortable">Level</th>
            <th data-sort="rate" class="th-sortable">Rate</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody class="user_waterfall_table_body">
          <!-- row for adding new entries -->
          

          <!-- draw rows for existing entries -->
          <%= render partial: 'user_waterfalls/user_waterfall', collection: @entries, as: :entry %>
        </tbody>

      </table>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12 form-label-responsive">
    <%= render partial: 'shared/pagination', locals: {models: @entries} %>
  </div>
</div>


<!-- Delete Modal -->
<div class="modal fade" id="unitDeleteModal" tabindex="-1" role="dialog" 
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Delete Waterfall Entry</h4>
      </div>
      <div class="modal-body">
        Are you sure you want to remove this link?
      </div>
      <div class="modal-footer">
        <button class="delete-btn">Delete</button>
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
      </div>

    </div>
  </div>
</div>