$('#annDeleteModal .delete-btn').replaceWith("<%= j(link_to 'Delete', announcement_path(@announcement, @params_copy.permit!), remote: true, method: :delete, class: 'btn btn-danger delete-btn link-as-button', id: 'delete-link') %>");
$('#annDeleteModal .delete-btn').click( function(event) {
	$('#annDeleteModal').modal('hide');
	event.preventDefault();
});

$('#annDeleteModal').modal('show');
