<div id="announcements">

<%= form_for(@announcement) do |f| %>
<div class="row">
  <div class="col-md-12">
    <%= render partial: 'shared/error_messages',
        locals: {model: @announcement} %>

        <div class="row">
          <div class="col-xs-2 form-label-responsive">
            <%= f.label :category, class: 'required' %>
          </div>
          <div class="col-xs-10 col-sm-4">
            <%= f.select(:category,
              options_for_select(%w(Residential Commercial Sales Event),
                [@announcement.category ? @announcement.category.titleize : 'Residential']),
              { prompt: "Choose one..."},
              class: 'form-control',
              required: true ) %>
          </div>
        </div>

        <br />
        <div class="row">
          <div class="form-group">
            <div class="col-sm-2 form-label-responsive">
              <%= f.label :note, 'Notes', class: 'required' %>
            </div>
            <div class="col-sm-10">
              <%= f.text_area :note, class: 'form-control', rows: 6, required: true %>
            </div>
          </div>
        </div>

        <br>
        <div class="row vertical-margin-lg">
          <div class="col-md-6 col-md-offset-3">
            <div class="actions">
              <%= f.submit 'Send', class: "btn btn-warning btn-block" %>
            </div>
          </div>
        </div>

  </div>
</div>
<% end %>

</div>
