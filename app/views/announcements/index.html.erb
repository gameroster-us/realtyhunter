<div class="row">
	<div class="col-md-8 col-md-offset-2">

		<div class="page-header">
		  <div class="row">
		    <div class="col-md-6">
		      <h1>Recent Announcements</h1>
		    </div>
		    <% if current_user.is_management? %>
			    <div class="col-md-6 form-label-responsive">
			      <%= link_to 'New announcement', new_announcement_path %>
			    </div>
			  <% end %>
		  </div>
		</div>

		<%= @announcements.each do |announcement| %>
		<div class="row">
			<div class="col-md-6">
				<div class="well">
					<h4 class="<%= announcement.canned_response.gsub(/\s+/, '_').downcase %>"><%= announcement.canned_response %></h4>
					
					<small><em><%= time_ago_in_words(announcement.updated_at) %></em></small><br />

					<%= announcement.street_number %> <%= announcement.route %>
					<% if announcement.building_unit %>
						#<%= announcement.building_unit %>
					<% end %>

					<p><%= announcement.note %></p>
				</div>
			</div>
		</div>
		<% end %>

	</div>
</div>