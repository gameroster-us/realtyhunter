<script>
   //unobstrusive: attach method call here
   //call when typing or enter or focus leaving
  $( document ).ready(function() {

    function doSearch() {
      $.ajax({
        url: "<%= residential_units_filter_path %>",
        data: {
          filter: $('#filter').val(),
          active_only: $('#checkbox_active').checked
        },
        dataType: "script"
      }).fail(function() {
        //console.log("[FAILED] search update failed");
      });
    };

    // change enter key to tab
    $('#filter').keydown(function(event) {
      if (event.keyCode == 13) {
        $('#checkbox_active').focus();
        return false;
      }
    });

    // search as user types
    var timer;
    $('#filter').keyup(function() {
      clearInterval(timer); // clear any interval on key up
      timer = setTimeout(doSearch, 500);
    });

    // toggle between active and inactive units
    $('#checkbox_active').click(function(event){
      $.ajax({
        url: "<%= residential_units_filter_path %>",
        data: {
          filter: $('#filter').val(),
          active_only: $('#checkbox_active').prop('checked')
        },
        dataType: "script"
      });
    });

  });
</script>

<% provide(:title, 'Residential Listings') %>
<h1 class="page-header">Residential Listings</h1>


<div class="row">
  <div class="col-md-6">
    <%= form_tag residential_units_path, :method => 'get' do %>
      <%= label_tag(:filter, "Filter:") %>
      <%= text_field_tag :filter, params[:code_name], 
        placeholder: "address", size: 50 %>
      &nbsp;&nbsp;
      <%= check_box_tag(:checkbox_active, class: "checkbox inline") %>
      <%= label_tag :checkbox_active, "Has active units" %>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-offset-9 col-md-3 right">
        <%= link_to 'Add a unit', new_residential_unit_path %><br />
      </div>
    </div>
    <div class="row">
      <div class="col-md pull-right">
        <%= will_paginate @residential_units %>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <br />    
    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th><%= sortable 'Address' %></th>
          <th><%= sortable 'landlord.code' %></th>
          <th style="width: 20%;">Access</th>
          <th><%= sortable 'bed_and_bath' %></th>
          <th><%= sortable 'available_by' %></th>
          <th><%= sortable 'rent' %></th>
          <th><%= sortable 'updated_by' %></th>
          <th><%= sortable 'status' %></th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody class="residential_units_table_body">
        <%= render @residential_units %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-10">
    <%= will_paginate @residential_units %>
  </div>
</div>

