<% provide(:title, 'Residential Listings') %>
<h1 class="page-header">Residential Listings</h1>

<div class="row">
  <div class="col-md-2">
    <%= form_tag residential_units_path, :method => 'get' do %>
      Search:
      <%= text_field_tag :search, params[:search], placeholder: "name/address", size: 50 %>
      <%= submit_tag "Go", :name => nil %>
      <%= link_to "Clear All Filters", users_path, class: 'btn btn-xs btn-default' %>
      
      <!-- TODO: sortable columns -->
    <% end %>
  </div>
  <div class="col-md-offset-10">
    <%= link_to 'Add a Unit', new_residential_unit_path %><br />
    <%= will_paginate @units %>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <br />    
    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th>Address</th>
          <th>Landlord Name</th>
          <th>Access</th>
          <th>Bed / Bath</th>
          <th>Available</th>
          <th>Rent</th>
          <th>Updated</th>
          <th>Status</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @units.each do |unit| %>
          <tr>
            <td>
              <%= link_to "#{unit.building.street_address} # #{unit.building_unit}", unit %>
              </td>
            <td>--</td>
            <td><%= unit.access_info %></td>
            <td><%= unit.beds %> / <%= unit.baths %></td>
            <td><%= unit.available_by.strftime("%F") %></td>
            <td><%= unit.rent %></td>
            <td>--</td>
            <td>
              <% if unit.status == "active" %>
                <span class="glyphicon glyphicon-arrow-up green" aria-hidden="true"></span>
              <% elsif unit.status == "pending" %>
                <span class="glyphicon glyphicon-arrow-up dark-orange" aria-hidden="true"></span>
              <% elsif unit.status == "off" %>
                <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
              <% end %>
            </td>
            <td><%= link_to 'Show', unit %> |
              <%= link_to 'Edit', edit_residential_unit_path(unit) %> |
              <%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-10">
    <%= will_paginate @units %>
  </div>
</div>

