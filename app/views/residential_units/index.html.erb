<script>
   //unobstrusive: attach method call here
   //call when typing or enter or focus leaving
  $( document ).ready(function() {

    function doSearch(event) {
      $.ajax({
        url: "<%= residential_units_filter_path %>",
        data: {
          search_params: {
            address: $('#address').val(),
            unit: $('#unit').val(),
            rent_min: $('#rent_min').val(),
            rent_max: $('#rent_max').val(),
            bed_min: $('#bed_min').val(),
            bed_max: $('#bed_max').val(),
            bath_min: $('#bath_min').val(),
            bath_max: $('#bath_max').val(),
            landlord: $('#landlord').val(),
            pet_policy_id: $('#pet_policy_id').val(),
          } 
        },
        dataType: "script"
      });
    };

    // search as user types
    var timer;
    function throttledSearch() {
      clearInterval(timer);  //clear any interval on key up
      timer = setTimeout(doSearch, 500);
    };
    
    // change enter key to tab
    function preventEnter(event) {
      if (event.keyCode == 13) {
        //$('#checkbox_active').focus();
        return false;
      }
    };

    $('input').keydown(preventEnter);
    $('#address').keyup(throttledSearch);
    $('#unit').keyup(throttledSearch);
    $('#rent_min').keyup(throttledSearch);
    $('#rent_max').keyup(throttledSearch);
    $('#bed_min').keyup(throttledSearch);
    $('#bed_max').keyup(throttledSearch);
    $('#bath_min').keyup(throttledSearch);
    $('#bath_max').keyup(throttledSearch);
    $('#landlord').keyup(throttledSearch);
    $('#pet_policy_id').change(throttledSearch);

  });
</script>

<% provide(:title, 'Residential Listings') %>
<div class="row">
  <div class="col-md-6"><h1>Residential Listings</h1><%= link_to 'Add a unit', new_residential_unit_path %><br /></div>

</div>
<hr />

<div class="row">
  <div class="col-md-8">
    <%= render 'map_overall_view' %>
  </div>
  <div class="col-md-4">

    <%= form_tag residential_units_path, :method => 'get' do %>
      <%= label_tag(:address, "Address:") %>
      <%= text_field_tag :address, params[:code_name], placeholder: "123 Main St", size: 35 %>
      &nbsp;&nbsp;
      <%= label_tag(:unit, "Unit:") %>
      <%= text_field_tag :unit, params[:unit], size: 5 %>
      &nbsp;&nbsp;
      <%= label_tag(:unit, "Rent:") %>
      <%= number_field_tag :rent_min, params[:rent_min], placeholder: "$", min: 0, max: 100000000 %>
      to 
      <%= number_field_tag :rent_max, params[:rent_max], placeholder: "$", min: 0, max: 100000000 %>
      <br />
      <%= label_tag(:unit, "Beds:") %>
      <%= number_field_tag :bed_min, params[:bed_min], min: 0, max: 10 %>
      to 
      <%= number_field_tag :bed_max, params[:bed_max], min: 0, max: 10 %>
      &nbsp;&nbsp;
      <%= label_tag(:unit, "Baths:") %>
      <%= number_field_tag :bath_min, params[:bath_min], min: 0, max: 10 %>
      to 
      <%= number_field_tag :bath_max, params[:bath_max], min: 0, max: 10 %>
      <br />
      <%= label_tag(:landlord, "Landlord:") %>
      <%= text_field_tag :landlord, params[:landlord], placeholder: "code", size: 25 %>
      &nbsp;&nbsp;

      <!-- TODO: fix plural of status to work in rails -->
      <br />
      <%= label_tag :pet_policy_id, "Pet policy" %><br>
      <%= select_tag(:pet_policy_id, 
        options_for_select(current_user.company.pet_policies.all.collect { |r| [r.name, r.id] }, params[:pet_policy_id]),
        include_blank: true) %>
      <br />
      <%= check_box_tag(:outdoor_space, class: "checkbox inline") %>
      <%= label_tag :outdoor_space, "Has outdoor space" %>
    <% end %>
  </div>
</div>
