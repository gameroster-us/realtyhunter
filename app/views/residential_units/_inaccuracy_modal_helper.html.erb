<%= form_for(residential_unit, url: residential_unit_send_inaccuracy_path(@residential_unit), remote: true) do |f| %>

	<div class="modal-body">
		<p>What's wrong at <%= @residential_unit.building.street_address %> 
		#<%= @residential_unit.building_unit %>? The more detail you can provide, the better.</p>

		<div class="field">
	    <%= f.text_area :inaccuracy_description, rows: 5, class: 'form-control' %>
	  </div>
	</div>
	<div class="modal-footer">
		<%= f.submit 'Submit', class: 'btn btn-primary submit-link' %>
	  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	</div>

<% end %>
