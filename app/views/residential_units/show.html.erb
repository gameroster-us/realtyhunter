<script>
$( document ).ready(function() {
    //console.log( "autocomplete plugin ready!" );

    $(".panel").geocomplete({
    	map: "#map_canvas",
    	location: "<%= @unit.building.formatted_street_address %>" ,
    	details: ".details"
    }).bind("geocode:result", function(event, result){
        //console.log(result);
    }).bind("geocode:error", function(event, result){
        //console.log("[ERROR]: " + result);
    });

});
</script>

<% provide(:title, 'Office') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<div class="row">
  		<div class="col-md">
	  		<h1 class="page-header">
	  			<%= number_to_currency(@unit.rent, {precision: 0}) %> - 
	  			<%= @unit.building.formatted_street_address %>, <%= @unit.building_unit %></h1>
	  			
	  			<p>
	  			<% if @unit.status == "active" %>
            <span class="green">On Market</span>
          <% elsif @unit.status == "pending" %>
            <span class="dark-orange">Pending Application</span>
          <% elsif @unit.status == "off" %>
            <span class="grey">Off Market</span>
          <% end %>

          | <%= link_to 'Edit', edit_residential_unit_path(@unit) %>
          | <%= link_to 'View all', residential_units_path %>
          </p>
	  	</div>
    </div>
    <div class="row">
  		<div class="col-md-12">

  			<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Unit Details</h3>
				  </div>
				  <div class="panel-body">

				  	<div id="map_canvas" style="width: 400px; height: 400px"></div>

				    <p>
				    	<strong>Building:</strong>
  						<%= @unit.building.formatted_street_address %>
						</p>
						<p>
							<strong>Access Info:</strong>
							<%= @unit.access_info %>
						</p>
						<p>
							<strong>Beds/Baths:</strong>
							<%= @unit.beds %> / <%= @unit.baths %>
						</p>
						<p>
							<strong>Lease Duration:</strong>
							<%= @unit.lease_duration.titleize %>
						</p>
						<p>
							<strong>Building Notes:</strong>
							<%= @unit.building.notes %>
						</p>
						<p>
							<strong>Unit Notes:</strong>
							<%= @unit.notes %>
						</p>
					</div>
				</div><!-- end panel -->


  		</div>
  	</div>
	</div>
</div>
  
