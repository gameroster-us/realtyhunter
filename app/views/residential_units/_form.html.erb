<%= form_for(@unit) do |f| %>
  <%= render :partial => 'shared/error_messages', 
    :locals => {:building => @unit} %>
 
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Edit Listing</h3>
    </div>
    <div class="panel-body">
      <div class="field">
        <%= f.label :building_unit, "Unit" %><br>
        <%= f.text_field :building_unit, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :rent %><br>
        <%= f.number_field :rent, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :access_info %><br>
        <%= f.text_area :access_info, class: 'form-control',
        rows: 4 %>
      </div>
      <div class="field">
        <%= f.label :beds %><br>
        <%= f.number_field :beds, class: 'form-control',
        in: 0.0..10.0 %>
      </div>
      <div class="field">
        <%= f.label :baths %><br>
        <%= f.number_field :baths, class: 'form-control', step: 0.5, in: 0.0..10.0 %>
      </div>
      <div class="field">
        <%= f.label :available_by %><br>
        <%= f.date_field :available_by, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :lease_duration %><br>
        <%= f.select :lease_duration, options_for_select(ResidentialUnit.lease_durations.collect { |s| [s[0].humanize, s[0]] }, selected: @unit.lease_duration), {} , class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :notes %><br>
        <%= f.text_field :notes, class: 'form-control' %>
      </div>
      
    </div>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
