<script>
   //unobstrusive: attach method call here
   //call when typing or enter or focus leaving
  function initialize() {
    function doSearch(event) {
      $.ajax({
        url: "<%= filter_landlords_path %>",
        data: {
          filter: $('#filter').val(),
          active_only: $('#checkbox_active').prop('checked')
        },
        dataType: "script"
      }).fail(function() {
        //console.log("[FAILED] search update failed");
      });
    };

    // search as user types
    var timer;
    function throttledSearch() {
      clearInterval(timer);  //clear any interval on key up
      timer = setTimeout(doSearch, 500);
    };
    
    // change enter key to tab
    function preventEnter(event) {
      if (event.keyCode == 13) {
        $('#checkbox_active').focus();
        return false;
      }
    };

    $('#filter').keydown(preventEnter);

    $('#filter').keyup(throttledSearch);
    $('#checkbox_active').click(doSearch);
  };
  $(document).ready(initialize);
</script>

<% provide(:title, 'Landlords') %>
<div class="page-header">
  <div class="row">
    <div class="col-md-6">
      <h1>Landlords</h1>
    </div>
    <div class="col-md-6 form-label-responsive">
      <%= link_to 'Add a Landlord', new_landlord_path %> |
      <%= link_to 'Download CSV', landlords_path(format: :csv) %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-3 vertical-padding">
    <%= form_tag landlords_path, :method => 'get' do %>
      <%= label_tag(:filter, "Filter:") %>
      <%= text_field_tag :filter, params[:code_name], 
        placeholder: "code/name", size: 30 %>
  </div>
  <div class="col-xs-12 col-md-3 vertical-padding">
      <%= check_box_tag(:checkbox_active, class: "checkbox inline") %>
      <%= label_tag :checkbox_active, "Has active units" %>
    <% end %>
  </div>

  <div class="hidden-xs hidden-sm col-xs-12 col-md-6 form-label-responsive">
    <%= will_paginate @landlords, inner_window: 1, class: 'pagination-sm' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">

    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th><%= sortable "code" %></th>
          <th><%= sortable "name" %></th>
          <th>Mobile</th>
          <th><%= sortable "active_units_count" %></th>
          <th><%= sortable "total_units_count" %></th>
          <th><%= sortable "last_unit_updated" %></th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody class="landlords_table_body">
        <%# Template Dependency: landlords/landlord %>
        <%= render @landlords %>
      </tbody>
    </table>

  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-6 form-label-responsive">
    <%= will_paginate @landlords, {inner_window: 1, class:"pagination-sm"} %>
  </div>
</div>

