<script>
   //unobstrusive: attach method call here
   //call when typing or enter or focus leaving
   $( document ).ready(function() {

    function doSearch(event) {
      $.ajax({
        url: "<%= landlords_filter_path %>",
        data: {
          filter: $('#filter').val(),
          agent_filter: $('#agent_filter').val(),
          active_only: $('#checkbox_active').checked
        },
        dataType: "script"
      }).fail(function() {
        //console.log("[FAILED] search update failed");
      });
    };

    // search as user types
    var timer;
    function throttledSearch() {
      clearInterval(timer);  //clear any interval on key up
      timer = setTimeout(doSearch, 500);
    };
    
    // change enter key to tab
    function preventEnter(event) {
      if (event.keyCode == 13) {
        $('#checkbox_active').focus();
        return false;
      }
    };

    $('#filter').keydown(preventEnter);
    $('#agent_filter').keydown(preventEnter);

    $('#filter').keyup(throttledSearch);
    $('#agent_filter').keyup(throttledSearch);
    // toggle between active and inactive units
    $('#checkbox_active').click(doSearch);
  });
</script>

<% provide(:title, 'Landlords') %>
<h1 class="page-header">Landlords</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_tag landlords_path, :method => 'get' do %>
      <%= label_tag(:filter, "Filter:") %>
      <%= text_field_tag :filter, params[:code_name], 
        placeholder: "code/name", size: 20 %>
      &nbsp;&nbsp;
      <%= label_tag(:agent_filter, "Primary Agent:") %>
      <%= text_field_tag :agent_filter, params[:agent], placeholder: "Agent Name", size: 20 %>
      &nbsp;&nbsp;
      <%= check_box_tag(:checkbox_active, class: "checkbox inline") %>
      <%= label_tag :checkbox_active, "Has active units" %>
    <% end %>

  </div>

  <div class="col-md-6">
    <div class="row">
      <div class="col-md-offset-9 col-md-3 right">
        <%= link_to 'Add a Landlord', new_landlord_path %>
      </div>
    </div>
    <div class="row">
      <div class="col-md pull-right">
        <%= will_paginate @landlords %>
      </div>
    </div>
  </div>

</div>

<div class="row">
  <div class="col-md-12">

    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th><%= sortable "code" %></th>
          <th><%= sortable "name" %></th>
          <th>Mobile</th>
          <th><%= sortable "primary_agent" %></th>
          <th><%= sortable "active_units_count" %></th>
          <th><%= sortable "total_units_count" %></th>
          <th><%= sortable "last_unit_updated" %></th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody class="landlords_table_body">
        <%= render @landlords %>
      </tbody>
    </table>

  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-6 right">
    <%= link_to 'Download CSV', landlords_path(format: :csv) %><br />
    <%= will_paginate @landlords %>
  </div>
</div>

