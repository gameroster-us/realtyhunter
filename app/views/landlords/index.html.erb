<% provide(:title, 'Landlords') %>

<div class="page-header">
  <div class="row">
    <div class="col-md-6">
      <h1>Landlords</h1>
    </div>
    <div class="col-md-6 form-label-responsive">
      <%= link_to 'Add a Landlord', new_landlord_path %> |
      <%= link_to 'Download CSV', landlords_path(format: :csv) %>
    </div>
  </div>
</div>

<div id="search-filters" data-search-path="<%= filter_landlords_path %>">
  <div class="row">
    <div class="col-xs-12 col-md-3 vertical-padding">
      <%= form_tag landlords_path, :method => 'get' do %>
        <%= label_tag(:filter, "Filter:") %>
        <%= text_field_tag :filter, params[:code_name], 
          placeholder: "code/name", size: 30 %>
    </div>
    <div class="col-xs-12 col-md-3 vertical-padding">
        <%= check_box_tag(:checkbox_active, class: "checkbox inline") %>
        <%= label_tag :checkbox_active, "Has active units" %>
      <% end %>
    </div>

    <div class="hidden-xs hidden-sm col-xs-12 col-md-6 form-label-responsive">
      <%= render partial: 'shared/pagination', locals: {models: @landlords} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">

    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th><%= sortable "code" %></th>
          <th><%= sortable "name" %></th>
          <th>Mobile</th>
          <th><%= sortable "active_units_count" %></th>
          <th><%= sortable "total_units_count" %></th>
          <th><%= sortable "last_unit_updated" %></th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody class="landlords_table_body">
        <%# Template Dependency: landlords/landlord %>
        <%= render @landlords %>
      </tbody>
    </table>

  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-6 form-label-responsive">
    <%= render partial: 'shared/pagination', locals: {models: @landlords} %>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="landlordDeleteModal" tabindex="-1" role="dialog" 
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Deleting Landlord</h4>
      </div>
      <div class="modal-body">
        Placeholder
      </div>
      <div class="modal-footer">
        <button class="delete-btn">Placeholder</button>
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
      </div>

    </div>
  </div>
</div>
