
<% provide(:title, 'Landlords') %>

<div class="page-header">
  <div class="row">
    <div class="col-md-6">
      <h1>Landlords</h1>
    </div>
    <div class="col-md-6 form-label-responsive">
      <%= link_to 'Add a Landlord', new_landlord_path, class: 'btn btn-warning btn-sm link-as-button' %>
      <%= link_to 'Download CSV', landlords_path(format: :csv), class: 'btn btn-warning btn-sm link-as-button' %>
    </div>
  </div>
</div>

<!-- put this here so that clicking on the buttons above won't trigger the spinner -->
<div id="landlords">

<div id="landlord-search-filters" data-search-path="<%= filter_landlords_path %>">

  <i class="fa fa-spinner fa-pulse fa-4x ll-spinner-desktop"></i>

  <%= form_tag landlords_path, :method => 'get' do %>
    <div class="row">
      <div class="col-xs-12 col-md-4 vertical-padding">
        <%= autocomplete_field_tag :filter, params[:filter],
          autocomplete_landlord_code_landlords_path,
          update_elements: {},
          placeholder: "Filter by code",
          size: 30, class:'form-control' %>
      </div>
      <div class="col-xs-12 col-md-3 vertical-padding">
        <div class="checkbox checkbox-warning checkbox-inline">
          <%= check_box_tag :checkbox_active, "", params[:active_only] == "true" ? true : false, class: 'styled' %>
          <label for="checkbox_active">Has on-market units</label>
        </div>
      </div>
    </div>
  <% end %><!-- form end -->
</div>

<br />
<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th data-sort="code" class="th-sortable">Code</th>
            <th data-sort="name" class="th-sortable">Name</th>
            <th>Mobile</th>
            <th data-sort="active_unit_count" class="th-sortable" class="">
              On-Market Units
            </th>
            <th data-sort="total_unit_count" class="th-sortable" class="">
              Total Units
            </th>
            <th data-sort="last_unit_updated_at" class="th-sortable" class="">
              Last Unit Updated
            </th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody class="landlords_table_body">
          <%# Template Dependency: landlords/landlord %>
          <%= render @landlords %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-6 form-label-responsive">
    <%= render partial: 'shared/pagination', locals: {models: @landlords} %>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade modal-fullscreen" id="landlordDeleteModal" tabindex="-1" role="dialog"
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Deleting Landlord</h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <button class="delete-btn"></button>
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
      </div>

    </div>
  </div>
</div>


</div>
