<tr class="<%= cycle('even', 'odd') -%>">
  <td><%= link_to landlord.code, landlord %></td>
  <td><%= landlord.name %></td>
  <td><%= landlord.mobile %></td>
  <td><%= landlord.active_unit_count %></td>
  <td><%= landlord.total_unit_count %></td>
  <td>
    <% if landlord.buildings.length > 0 %>
      <%= time_ago_in_words(landlord.last_unit_updated_at) %>
    <% else %>
      -- No buildings --
    <% end %>
  </td>
  <td>
    <%= link_to 'Edit', edit_landlord_path(landlord) %> |
    <%= link_to 'Delete', delete_modal_landlord_path(landlord),
    data: {toggle: "modal", target: "#landlordDeleteModal"}, remote: true %>
  </td>
</tr>