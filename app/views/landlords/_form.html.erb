<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">

        <%= form_for(@landlord) do |f| %>
          <% if @landlord.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@landlord.errors.count, "error") %> prohibited this landlord from being saved:</h2>

              <ul>
              <% @landlord.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :code %><br>
            <%= f.text_field :code, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :phone %><br>
            <%= f.text_field :phone, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :mobile %><br>
            <%= f.text_field :mobile, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :fax %><br>
            <%= f.text_field :fax, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :email %><br>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :website %><br>
            <%= f.text_field :website, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :street_address %><br>
            <%= f.text_field :street_address, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :city %><br>
            <%= f.text_field :city, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :state %><br>
            <%= f.text_field :state, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :zipcode %><br>
            <%= f.text_field :zipcode, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :notes, "Notes (will be shared on listings)" %><br>
            <%= f.text_area :notes, class: 'form-control',
            rows: 4 %>
          </div>
          <div class="field">
            <%= f.label :listing_agent_percentage %><br>
            <%= f.number_field :listing_agent_percentage, class: 'form-control', min: 0, max: 100 %>
          </div>
          <div class="field">
            <%= f.label :required_security_id %><br>
            <%= f.select(:required_security_id, options_for_select(@landlord.company.required_securities.all.collect { |r| [r.name, r.id] }, 
              [@landlord.required_security ? @landlord.required_security.id : '']),
               {prompt: "Choose one..."},
              :required => true, 
              class: 'form-control',
              :include_blank => true) %>
          </div>
          <div class="field">
            <%= f.label :pet_policy_id %><br>
            <%= f.select(:pet_policy_id, options_for_select(@landlord.company.pet_policies.all.collect { |r| [r.name, r.id] }, 
              [@landlord.pet_policy ? @landlord.pet_policy.id : '']),
               {prompt: "Choose one..."},
              :required => true, 
              class: 'form-control',
              :include_blank => true) %>
          </div>
          <div class="field">
            <%= f.label :management_info, "Additional Management Info" %><br>
            <%= f.text_area :management_info, class: 'form-control', rows: 4 %>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>



        <% end %>
      </div>
    </div>

  </div>
</div>