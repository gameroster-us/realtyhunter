$('#roommateDeleteModal .modal-body').html(
	"Are you sure you want to delete this <%= j(@roommate.name) %>? Deleting them is permanent and will completely erase their info!");

$('#roommateDeleteModal .delete-btn').replaceWith("<%= j(link_to 'Delete', @roommate, remote: true, method: :delete, class: 'btn btn-danger delete-btn link-as-button', id: 'delete-link') %>");

$('#roommateDeleteModal .delete-btn').click( function(event) {
	$('#roommateDeleteModal').modal('hide');
	event.preventDefault();
});

$('#roommateDeleteModal').modal('show');
