$('#roommateDeleteModal .modal-body').html(
	"Are you sure you want to match <%= j(@roommate.name) %>? Matching will prevent them from showing up in roommate searches.");

$('#roommateDeleteModal .delete-btn').replaceWith("<%= j(link_to 'Mark Matched', @roommate, remote: true, method: :delete, class: 'btn btn-danger delete-btn link-as-button', id: 'delete-link') %>");

$('#roommateDeleteModal #delete-link').click( function(event) {
	$('#roommateDeleteModal').modal('hide');
	event.preventDefault();
});

$('#roommateDeleteModal').modal('show');
