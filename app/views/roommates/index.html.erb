<% provide(:title, 'Roommates') %>

<div id="roommates">

<div class="page-header">
  <div class="row">
    <div class="col-md-6">
      <h1>Roommates</h1>
    </div>
    <div class="col-md-6 form-label-responsive">
      
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-4"><!-- hidden-sm hidden-xs -->

    <i class="fa fa-spinner fa-pulse fa-5x res-spinner-desktop"></i>

    <div id="room-search-filters" data-search-path="<%= filter_roommates_path %>">
      <%= form_tag roommates_path, :method => 'get' do %>
        
        <div class="row vertical-padding">
          <div class="col-xs-5 form-label-responsive">
            <%= label_tag(:submitted_date, "Submitted Date") %>
          </div>
          <div class="col-xs-7 col-sm-left-padding">
            <div class='input-group date datepicker'>
              <%= text_field_tag :submitted_date, params[:submitted_date], 
                placeholder: "date", class:"form-control", size:30 %>
              <label class="input-group-addon btn" for="date">
                <span class="fa fa-calendar open-datepicker"></span>
              </label>
            </div>
          </div>
        </div>
        
        <div class="row vertical-padding">
          <div class="col-xs-5 form-label-responsive">
            <%= label_tag(:move_in_date, "Move In Date") %>
          </div>
          <div class="col-xs-7 col-sm-left-padding">
            <div class='input-group date datepicker'>
              <%= text_field_tag :move_in_date, params[:move_in_date], 
                placeholder: "date", class:"form-control", size:30 %>
              <label class="input-group-addon btn" for="date">
                <span class="fa fa-calendar open-datepicker"></span>
              </label>
            </div>
          </div>
        </div>
        
        <br />
        <div class="row vertical-padding">
          <div class="col-xs-12">
            <%= link_to 'Neighborhoods', neighborhoods_modal_roommates_path, 
              data: {toggle: "modal", target: "#neighborhoodsModal"}, remote: true, 
              class: "link-as-button btn btn-sm btn-warning" %>
            <div id="selected_neighborhoods" class="vertical-padding">
              <!-- gets written over by neighborhood_modal.js.erb -->
              <% @selected_neighborhoods.each do |f| %>
                <%= link_to "", 
                  class: "btn btn-xs btn-default remove-neighborhood", remote: "true", data: {id:f.id} do %>
                  <%= f.name %> <span class="glyphicon glyphicon-remove"></span>
                <% end %>
              <% end %>
            </div>
            <%= hidden_field_tag :neighborhood_ids, params[:neighborhood_ids] %>
          </div>
        </div>

        <div class="row vertical-padding">
          <div class="col-xs-12">
            <%= link_to 'Clear filters', roommates_path, class: 'btn btn-xs btn-default' %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
  <div class="col-xs-12 col-md-4"><!-- hidden-sm hidden-xs -->
     <div class="row vertical-padding">
          <div class="col-xs-5 form-label-responsive">
            <%= label_tag :monthly_budget %>
          </div>
          <div class="col-xs-7 col-sm-left-padding">
       
            <%= select_tag(:monthly_budget, 
              options_for_select(['$500 - $749', '$750 - $999', '$1,000 - $1,249', '$1,250 - $1,499', '$1,500+'], 
              ),
              {class: "form-control", 
              prompt: "Choose one..."}) %>
          </div>
        </div>

        <div class="row vertical-padding">
          <div class="col-xs-5 form-label-responsive">
            <%= label_tag :user, 'Referred By' %>
          </div>
          <div class="col-xs-7 col-sm-left-padding">
            <%= select_tag(:user, 
              options_for_select(current_user.company.users.collect {|u| [u.name, u.id]}),
              {class: "form-control", 
              prompt: "Choose one..."}) %>
          </div>
        </div>
  </div>

  <div class="col-xs-12 col-md-4"><!-- hidden-sm hidden-xs -->
    <div class="row vertical-padding">
      <div class="col-xs-5 form-label-responsive">
        <%= label_tag :dogs_allowed %>
      </div>
      <div class="col-xs-7 col-sm-left-padding">
   
        <%= select_tag(:dogs_allowed, 
          options_for_select(['Yes', 'No'], 
          ),
          {class: "form-control", 
          prompt: "Choose one..."}) %>
      </div>
    </div>

    <div class="row vertical-padding">
      <div class="col-xs-5 form-label-responsive">
        <%= label_tag :cats_allowed %>
      </div>
      <div class="col-xs-7 col-sm-left-padding">
   
        <%= select_tag(:cats_allowed, 
          options_for_select(['Yes', 'No'], 
          ),
          {class: "form-control", 
          prompt: "Choose one..."}) %>
      </div>
    </div>
  </div>


</div>

<hr />
<%= form_tag print_list_roommates_path do %>
<br />
<div class="row">
  <div class="col-md-6">
      <!-- will be a dropdown of either print pdf or email -->
      <div class="dropdown selected-listings">
        <button class="btn btn-warning btn-sm dropdown-toggle disabled" id="selected-listings-dropdown" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" role="menu">
          0 Selected Roommates
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu selected-listings-menu" aria-labelledby="selected-listings-dropdown">
          <li role="presentation"><a class="list-item-sm-padding" id="emailListings" role="menuitem" tabindex="-1" data-toggle="modal" data-target="#emailModal">
            <i class="fa fa-fw fa-envelope"></i> Email</a></li>
          <li role="presentation"><a class="list-item-sm-padding" data-action="PDF" role="menuitem" tabindex="-1">
            <i class="fa fa-fw fa-file-text"></i> PDF</a></li>
          <li role="presentation"><a class="list-item-sm-padding" data-action="CSV" role="menuitem" tabindex="-1">
            <i class="fa fa-fw fa-list"></i> CSV</a></li>
        </ul>
      </div>
    
    <span class="totals">
      &nbsp;&nbsp;<%= @roommates.total_count %> Roommates found
    </span>
  </div>

  <div class="col-md-6">
    <div class="form-label-responsive">
      <%= render partial: 'shared/pagination', locals: {models: @roommates} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th style="min-width: 30px;">
            <!-- checkboxes -->
            <i data-action="selectAllUnits" class="select-all-listings fa fa-square-o"></i>
          </th>
          <th><!-- first image --></th>
          <th data-sort="name" class="th-sortable">Name</th>
          <th data-sort="phone" class="th-sortable">Phone</th>
          <th data-sort="email" class="th-sortable">Email</th>
          <th data-sort="monthly_budget" class="th-sortable">Monthly Budget</th>
          <th data-sort="move_in_date" class="th-sortable">Move In Date</th>
          <th data-sort="what_neighborhood_do_you_want_to_live_in" class="th-sortable">Neighborhood</th>
          <th data-sort="dogs_allowed" class="th-sortable">Dogs Ok</th>
          <th data-sort="cats_allowed" class="th-sortable">Cats Ok</th>
          <th data-sort="submitted_date" class="th-sortable selected-sort">Submitted <i class="glyphicon glyphicon-triangle-bottom"></i></th>
          <th data-sort="status" class="th-sortable">Status</th>
          <% if current_user.is_management? || current_user.is_listings_manager? %>
            <th colspan="1"></th>
          <% end %>
        </tr>
      </thead>

      
      <tbody class="roommates_table_body">
        <%= render partial: 'roommates/roommate', 
        collection: @roommates, locals: {res_images: @roommate_images} %>
      </tbody>
    </table>

  </div>
</div>

<% end %><!-- form -->

<div class="row">
  <div class="col-md-12 form-label-responsive">
    <%= render partial: 'shared/pagination', locals: {models: @roommates} %>
  </div>
</div>

<!-- Email Modal -->
<div class="modal fade" id="emailModal" tabindex="-1" role="dialog" 
  aria-labelledby="emailModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        
        <%= form_tag(send_listings_roommates_path, remote:true) do %>
        <div class="row vertical-padding">
          <div class="col-md-12">
            <%= label_tag "roommate[recipients]", "Recipients", class: 'required' %>
            <i><small>Use commas to separate email addresses</small></i>
            <%= text_field_tag "roommate[recipients]", nil, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="row vertical-padding">
          <div class="col-md-12">
            <%= label_tag "roommate[title]", "Title", class: 'required' %>
            <%= text_field_tag "roommate[title]", "Check out these great listings!", class: 'form-control', required: true %>
          </div>
        </div>

        <div class="row vertical-padding">
          <div class="col-md-12">
            <%= label_tag "roommate[message]", "Message" %>
            <%= text_area_tag "roommate[message]", nil, class: 'form-control' %>
          </div>
        </div>

        <br />
        <div class="row vertical-padding">
          <div class="col-md-12">
            
          </div>
        </div>

        <%= hidden_field_tag "roommate[listing_ids]" %>
        

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default horizontal-padding" data-dismiss="modal">Cancel</button>&nbsp;&nbsp; 
        <%= submit_tag "Send Email", class:"btn btn-warning" %>
      </div>

      <% end %>

    </div>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="unitDeleteModal" tabindex="-1" role="dialog" 
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Delete Unit</h4>
      </div>
      <div class="modal-body">
        Placeholder
      </div>
      <div class="modal-footer">
        <button class="delete-btn">Placeholder</button>
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
      </div>

    </div>
  </div>
</div>


<!-- Neighborhood Modal -->
<div class="modal fade" id="neighborhoodsModal" tabindex="-1" role="dialog" 
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="neighborhood-modal-title">Select Neighborhoods</h4>
      </div>
      <div class="modal-body">
        <div id="placeholder-body"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning btn-close" data-dismiss="modal">Done</button>
      </div>

    </div>
  </div>
</div>


</div>