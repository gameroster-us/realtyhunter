$('#roommateArchiveModal .modal-body').html(
	"Are you sure you want to match <%= j(@roommate.name) %>? Matching will prevent them from showing up in roommate searches.");

$('#roommateArchiveModal .delete-btn').replaceWith("<%= j(link_to 'Mark Matched', archive_roommate_path(@roommate), remote: true, method: :post, class: 'btn btn-danger delete-btn link-as-button', id: 'delete-link') %>");

$('#roommateArchiveModal #delete-link').click( function(event) {
	$('#roommateArchiveModal').modal('hide');
	event.preventDefault();
});

$('#roommateArchiveModal').modal('show');
