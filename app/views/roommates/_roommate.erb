  <tr class="<%= cycle('even', 'odd') -%>" data-id="<%= roommate.id %>" data-email="<%= roommate.email %>" >
    
    <!-- ****** checkboxes ****************************************** -->
    <td>
      <i data-action="selectUnit" class="fa fa-square-o"></i>
    </td>

    <!-- ****** IMAGE ****************************************** -->
    <td>
      <!-- user uploaded an image from wufoo -->
      <% if roommate.upload_picture_of_yourself %>
        <%= link_to(image_tag(roommate.upload_picture_of_yourself, class: 'img-responsive', size:'100x100',
          alt: roommate.upload_picture_of_yourself), roommate) %>
      <% else %>
        <% if @roommate_images[roommate.id] %>
          <%= link_to(image_tag(@roommate_images[roommate.id].file.url(:thumb), :class => 'img-responsive', 
            alt: @roommate_images[roommate.id].file.url(:medium)), roommate) %>
        <% else %>
          <!-- placeholder image -->
          <%= link_to(image_tag("listing_soon.png", alt: "Image coming soon", :size => "100x100"), roommate) %>
        <% end %>  
      <% end %>
    </td>
    
    <!-- ****** NAME ****************************************** -->
    <td>
      <%= link_to "#{roommate.name}", roommate_path(roommate.id) %><br />
    </td>

    <!-- ****** PHONE ****************************************** -->
    <td><%= roommate.phone_number %></td>

    <!-- ****** EMAIL ****************************************** -->
    <td><%= roommate.email %></td>

    <!-- ****** BUDGET ****************************************** -->
    <td>
      <% if roommate.monthly_budget %>
        <%= roommate.monthly_budget %>
      <% end %>
    </td>

    <!-- ****** MOVE IN DATE ****************************************** -->
    <td>
      <% if roommate.move_in_date %>
        <%= roommate.move_in_date.strftime("%b %d") %>
      <% end %>
    </td>

    <!-- ****** NEIGHBORHOOD ****************************************** -->
    <td>
      <% if roommate.neighborhood_name %>
        <%= roommate.neighborhood_name %>
      <% end %>
    </td>

    <!-- ****** DOGS ALLOWED ****************************************** -->
    <td>
      <% if roommate.dogs_allowed == true %>
        <span class="glyphicon glyphicon-ok green text-center" aria-hidden="true"></span>
      <% else %>
        <span class="glyphicon glyphicon-remove red middle" aria-hidden="true"></span>
      <% end %>
    </td>

    <!-- ****** CATS ALLOWED ****************************************** -->
    <td>
      <% if roommate.cats_allowed == true %>
        <span class="glyphicon glyphicon-ok green text-center" aria-hidden="true"></span>
      <% else %>
        <span class="glyphicon glyphicon-remove red middle" aria-hidden="true"></span>
      <% end %>
    </td>

    <!-- ****** SUBMITTED DATE ****************************************** -->
    <td>
      <% if roommate.submitted_date %>
        <%= roommate.submitted_date.strftime("%b %d") %>
      <% end %>
    </td>

    <!-- ****** LINKS ****************************************** -->
    <% if current_user.is_management? || current_user.is_listings_manager? %>
      <td>
        <%= link_to 'Edit', edit_roommate_path(roommate) %> 
        <br />
        <% if !roommate.archived %>
          <%= link_to 'Mark Inactive', delete_modal_roommate_path(roommate), 
            data: { toggle: "modal", target: "#roommateDeleteModal"}, remote: true %>
        <% else %>
          <%= link_to 'Mark Active', unarchive_modal_roommate_path(roommate), 
            data: { toggle: "modal", target: "#roommateUnarchiveModal"}, remote: true %>
        <% end %>
        <br />
      </td>
    <% end %>
  </tr>
