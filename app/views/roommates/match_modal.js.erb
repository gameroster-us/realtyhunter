$('#roommateMatchModal .modal-body').html(
	"Are you sure you want to match <%= j(@roommate.name) %>? Matching will prevent them from showing up in roommate searches.");

$('#roommateMatchModal .delete-btn').replaceWith("<%= j(link_to 'Assign Roommate', match_roommate_path(@roommate), remote: true, method: :post, class: 'btn btn-danger delete-btn link-as-button', id: 'delete-link') %>");

$('#roommateMatchModal #delete-link').click( function(event) {
	$('#roommateMatchModal').modal('hide');
	event.preventDefault();
});

$('#roommateMatchModal').modal('show');
