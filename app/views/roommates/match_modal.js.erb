$('#roommateMatchModal .modal-content').html("<%= j( render 'match_modal_helper', locals: { roommate: @roommate }) %>");

// assigning roommates popup
$('#roommateMatchModal #address').bind('railsAutocomplete.select', Roommates.updateUnits);

$('#roommateMatchModal #submit-link').click( function(event) {
	$('#roommateMatchModal').modal('hide');
	event.preventDefault();
});

$('#roommateMatchModal').modal('show');
