<% if @listings.count > 0 %>
	<%= select_tag(:unit_id, 
	  options_for_select(@listings.collect {|l| [l.building_unit, l.id]}), 
	  { prompt: "Choose one..." ,
	  class: 'form-control',
	  required: true }) %>
<% else %>
	<%= select_tag(:unit_id, 
    options_for_select([]),
      {prompt: "Choose one...",
      class: 'form-control',
      required: true }) %>
<% end %>