<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<% provide(:title, 'Roommate Referral') %>

		<div class="page-header">
		  <div class="row">
		    <div class="col-md-6">
		      <h1><%= @roommate.name %></h1>
		    </div>
