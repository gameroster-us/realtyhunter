<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places&key=" + ENV['GOOGLE_MAPS_KEY']></script>
  <%= javascript_include_tag "application" %>
</head>
<body>

<div id="main-container" class="container-fluid">

	<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "RealtyMonster", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>

        <li><%= link_to "Buildings", buildings_path %></li>
        <li><%= link_to "Residential Listings", residential_units_path %></li>
        <li><%= link_to "Landlords", landlords_path %></li>

        <% if logged_in? %>
          <!-- COMPANY ADMIN -->
          <!--% if current_user.is_management? %-->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.company.name %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Company", company_path(current_user.company) %></li>
                <li><%= link_to "Offices", company_offices_path(current_user.company) %></li>
                <li><%= link_to "Managers", company_managers_path(current_user.company) %></li>
                <li><%= link_to "Coworkers", company_employees_path(current_user.company) %></li>
              </ul>
            </li>
          <!--% end %-->

        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name.titleize %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              
              <li><%= link_to "Profile", current_user %></li>
              <!--li><%= link_to "Settings", edit_user_path(current_user) %></li-->
              <% if current_user.is_manager? %>
                <li><%= link_to "My Team Members", user_subordinates_path(current_user) %></li>
              <% end %>
              <% if current_user.is_company_admin? %>
                <li><%= link_to "Add New Member", users_batch_new_path %></li>
                <li><%= link_to "Add Office", new_company_office_path(current_user.company) %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>

        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %><!-- if logged_in? -->

        <!-- SUPER ADMIN -->
        <% if (logged_in?) && (current_user.has_role? :super_admin) %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Administrator Menu <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Companies", companies_path %></li>
            <li><%= link_to "Users", users_path %></li>
          </ul>
          </li>
        <% end %>
      <% end %>


      </ul>
    </nav>
  </div>
</header>

	<!-- error msgs -->
	<% flash.each do |message_type, message| %>
    <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
  <% end %>		
		
	<%= yield %>

	<%= debug(params) if Rails.env.development? %>
</div>
		
</body>
</html>

