
<% provide(:title, 'Deals') %>

<div class="page-header">
  <div class="row">
    <div class="col-md-6">
      <h1>Deals</h1>
    </div>
    <div class="col-md-6 form-label-responsive">
      <%= link_to 'Add a Deal', new_deal_path, class: 'btn btn-warning btn-sm link-as-button' %> 
      <%= link_to 'Download CSV', deals_path(format: :csv), class: 'btn btn-warning btn-sm link-as-button' %>
    </div>
  </div>
</div>

<!-- put this here so that clicking on the buttons above won't trigger the spinner -->
<div id="deals">

<div id="deals-search-filters" data-search-path="<%= filter_deals_path %>">

  <i class="fa fa-spinner fa-pulse fa-4x forms-spinner-desktop"></i>

  <%= form_tag deals_path, :method => 'get' do %>
    <div class="row vertical-padding">
          <div class="col-md-1">
            <%= label_tag(:address, "Address:") %>
          </div>
          <div class="col-md-3">
          <%= autocomplete_field_tag :address, params[:address], 
              autocomplete_building_formatted_street_address_deals_path,
              update_elements: {},
              placeholder: "123 Main St", 
              class:'form-control' %>
          </div>
        
          <div class="col-md-2 form-label-responsive">
            <strong>Closed Between:</strong>
          </div>
        
          <div class="col-md-2 col-sm-left-padding">
            <div class='input-group date datepicker'>
              <%= text_field_tag :closed_date_start, params[:closed_date_start], 
                placeholder: "starting", class:"form-control", size:30 %>
              <label class="input-group-addon btn" for="date">
                <span class="fa fa-calendar open-datepicker"></span>
              </label>
            </div>
          </div>

          <div class="col-md-2 col-sm-left-padding">
            <div class='input-group date datepicker'>
              <%= text_field_tag :closed_date_end, params[:closed_date_end], 
                placeholder: "ending", class:"form-control" %>
              <label class="input-group-addon btn" for="date">
                <span class="fa fa-calendar open-datepicker"></span>
              </label>
            </div>
          </div>
        </div>
        
        <div class="row vertical-padding">
          <div class="col-md-2 col-md-offset-1">
            <%= link_to 'Clear filters', deals_path, class: 'btn btn-xs btn-default' %>
          </div>
        </div>
  <% end %><!-- form end -->
</div>

<hr />
<div class="row">
  <div class="col-md-6">
    <span class="totals">
      &nbsp;&nbsp;<%= @deals.total_count %> Deals found
    </span>
  </div>

  <div class="col-md-6">
    <div class="form-label-responsive">
      <%= render partial: 'shared/pagination', locals: {models: @deals} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">

    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th data-sort="address" class="th-sortable">Address</th>
          <th data-sort="client" class="th-sortable selected-sort">Client <i class="glyphicon glyphicon-triangle-bottom"></i></th>
          <th data-sort="price" class="th-sortable">Price</th>
          <th data-sort="commission" class="th-sortable">Commission</th>
          <th data-sort="closed_date" class="th-sortable">Closed Date</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody class="deals_table_body">
        <%= render @deals %>
      </tbody>
    </table>

  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-6 form-label-responsive">
    <%= render partial: 'shared/pagination', locals: {models: @deals} %>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="dealDeleteModal" tabindex="-1" role="dialog" 
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Deleting Deal</h4>
      </div>
      <div class="modal-body">
        Placeholder
      </div>
      <div class="modal-footer">
        <button class="delete-btn">Placeholder</button>
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
      </div>

    </div>
  </div>
</div>


</div>