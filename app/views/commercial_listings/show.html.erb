<% provide(:title, @commercial_unit.unit.building.street_address) %>

<div id="commercial">

<div class="row">
  <div class="col-md-8 col-md-offset-2">
		<br/>
  	<br/>
		<div id="cunit-panel" class="panel panel-default">
		  <div class="panel-heading">
		    <div class="panel-title">    	
		    	<div class="row">
			  		<div class="col-md-6">
			  			<h1>
				  			<%= @commercial_unit.unit.building.street_address %>
				  		</h1>
				  		<p>
			  				<%= @commercial_unit.unit.building.neighborhood.name %>, <%= @commercial_unit.unit.building.sublocality %>, <%= @commercial_unit.unit.building.administrative_area_level_2_short %> <%= @commercial_unit.unit.building.postal_code %>
			  			</p>
			  		</div>
			  		<div class="col-md-6 right">
			  			<h1><%= money_formatted(@commercial_unit.price_per_sq_ft) %>/SF/Month</h1>
				  		<p><%= @commercial_unit.sq_footage %> SF | <%= @commercial_unit.commercial_property_type.property_type %></p>
			  		</div>
			    </div>
		    </div><!-- panel-title -->
		  </div><!-- panel-heading -->

		  <div class="panel-body">
		  	<div class="row">
		  		<div class="col-md-9">
		  			<p>
				  	  <%= link_to 'View all', commercial_listings_path %>
		        	| <%= link_to 'Print', print_modal_commercial_listing_path(@commercial_unit), 
		        		data: {toggle: "modal", target: "#printModal"}, remote: true %>
		        	<% if current_user.is_management? %>
					  		| <%= link_to 'Edit', edit_commercial_listing_path(@commercial_unit) %>
					  		| <%= link_to 'Duplicate', duplicate_modal_commercial_listing_path(@commercial_unit), 
			      				data: { toggle: "modal", target: "#unitDuplicateModal"}, remote: true %>
					  	<% end %>
		        </p>		
		  		</div>
		  		<div class="col-md-3 form-label-responsive vertical-padding">
			  		<%= link_to 'Report Inaccuracy', inaccuracy_modal_commercial_listing_path(@commercial_unit), 
		  				class: "btn btn-danger btn-sm",
		  				data: {toggle: "modal", target: "#unitInaccuracyModal"}, remote: true %>
		  		</div>
		  	</div><!-- row -->
		  	

		  	<br />
		  	<div class="row">
		  		<div class="col-md-12">
		  			<!-- begin photos -->
				  	<% if @commercial_unit.unit.images.length > 0 || @commercial_unit.unit.building.images.length > 0 %>
							<div id="commercial_unit-carousel" class="carousel slide" data-ride="carousel" data-interval="false">
							  <!-- Wrapper for slides -->
							  <div class="carousel-inner" role="listbox">
							  <!-- first display building photos... -->
							  	<% @commercial_unit.unit.building.images.each do |image| %>
							  		<div class="item">
								      <%= image_tag image.file.url(:original), :class => 'img-responsive center-block', 
								      	alt: image.file.url(:original)  %>
								    </div>
							  	<% end %>
							  	<!-- now display unit photos -->
							  	<% @commercial_unit.unit.images.each do |image| %>
							  		<div class="item">
								      <%= image_tag image.file.url(:original), :class => 'img-responsive center-block', 
								      	alt: image.file.url(:original) %>
								    </div>
							  	<% end %>
							  </div>

							  <!-- Controls -->
							  <% if @commercial_unit.unit.building.images.length + @commercial_unit.unit.images.length > 1 %>
								  <a class="left carousel-control" href="#commercial_unit-carousel" role="button" data-slide="prev">
								    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
								    <span class="sr-only">Previous</span>
								  </a>
								  <a class="right carousel-control" href="#commercial_unit-carousel" role="button" data-slide="next">
								    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
								    <span class="sr-only">Next</span>
								  </a>
							  <% end %>
							</div>

							<!-- clickable navigation -->
							<!-- first building photos... -->
							<% if @commercial_unit.unit.building.images.length + @commercial_unit.images.length > 1 %>
								<% i = 0 %>
								<% for i in 0..@commercial_unit.unit.building.images.length-1 %>
									<% image = @commercial_unit.unit.building.images[i] %>
						  		<a href="#commercial_unit-carousel" data-slide-to="<%= i %>">
							      <%= image_tag image.file.url(:thumb), :class => 'photo-inline', 
							      	alt: image.file.url(:thumb) %>
							    </a>
						  	<% end %>
						  	<!-- now display unit photos -->
						  	<% for j in 0..@commercial_unit.images.length-1 %>
									<% image = @commercial_unit.images[j] %>
						  		<a href="#commercial_unit-carousel" data-slide-to="<%= (j+i) %>">
							      <%= image_tag image.file.url(:thumb), :class => 'photo-inline', 
							      	alt: image.file.url(:thumb) %>
							    </a>
						  	<% end %>
						  <% end %>

					  <% else %>
					  	<!-- placeholder image -->
              <%= image_tag "listing_soon.png", alt: "Image coming soon",
              	:class => 'img-responsive center-block', width: "80%" %>
					  <% end %>
					  <!-- end photos -->
		  		</div>
		  	</div><!-- row -->
        
		  	<br />
		  	<div class="row">
		  		<div class="col-md-12">
			    	<h3><%= @commercial_unit.commercial_property_type.property_type %> Property For Lease</h3>
			    </div>
			  </div>

		    <br />
		    <div class="row">
				  <div class="col-md-3">
				    <strong>Total Space</strong>
				  </div>
				  <div class="col-md-3">
				    <%= @commercial_unit.sq_footage %> SF
				  </div>
				  <div class="col-md-3">
				    <strong>Floor</strong>
				  </div>
				  <div class="col-md-3">
				    <%= @commercial_unit.floor %>
				  </div>
				</div>

				<div class="row">
				  <div class="col-md-3">
				    <strong>Rent per Sq Ft</strong>
				  </div>
				  <div class="col-md-3">
				    <%= money_formatted(@commercial_unit.price_per_sq_ft) %> /SF/MONTH
				  </div>
				  <div class="col-md-3">
				    <strong>Building Size</strong>
				  </div>
				  <div class="col-md-3">
				    <%= @commercial_unit.building_size %> SF
				  </div>
				</div>

				<div class="row">
					<div class="col-md-3">
				    <strong>Rental per Month</strong>
				  </div>
				  <div class="col-md-3">
				    <%= rent_formatted(@commercial_unit.unit.rent) %>
				  </div>
				  <div class="col-md-3">
				    <strong>Total Lot Size</strong>
				  </div>
				  <div class="col-md-3">
				    <%= @commercial_unit.total_lot_size %>
				  </div>
				  
				</div>

				<div class="row">
					<div class="col-md-3">
				    <strong>Property Type</strong>
				  </div>
				  <div class="col-md-3">
				    <%= @commercial_unit.commercial_property_type.property_type %>
				  </div>
				  <div class="col-md-3">
				    <strong>Min Divisible</strong>
				  </div>
				  <div class="col-md-3">
				    <%= @commercial_unit.minimum_divisible %> SF
				  </div>
				</div>

				<div class="row">
				  <div class="col-md-3">
				    <strong>Property Sub-type</strong>
				  </div>
				  <div class="col-md-3">
				    <%= @commercial_unit.commercial_property_type.property_sub_type %>
				  </div>
				  <div class="col-md-3">
				    <strong>Max Contiguous</strong>
				  </div>
				  <div class="col-md-3">
				    <%= @commercial_unit.maximum_contiguous %> SF
				  </div>
				</div>

				<div class="row">
				  <div class="col-md-3">
				    <strong>Construction Status</strong>
				  </div>
				  <div class="col-md-3">
				  	<% if @commercial_unit.construction_status == "existing" %>
				  		Existing
				  	<% else %>
				  		Under Construction/Proposed
				  	<% end %>
				  </div>
				  <div class="col-md-3">
				    
				  </div>
				  <div class="col-md-3">
				  	
				  </div>
				</div>

				<div class="row">
				  <div class="col-md-3">
				    <strong>Can build to suit</strong>
				  </div>
				  <div class="col-md-3">
				  	<% if @commercial_unit.build_to_suit %>
				    	Yes
				    <% else %>
				    	No
				    <% end %>
				  </div>
				  <div class="col-md-3">
				  
				  </div>
				  <div class="col-md-3">
				  
				  </div>
				</div>

				<div class="row">
					<div class="col-md-3">
				    <strong>Lease Type</strong>
				  </div>
				  <div class="col-md-3">
				  	<%= @commercial_unit.lease_type.humanize.titleize %>
				  </div>
				  <div class="col-md-3">
				    <strong>Date Available</strong>
				  </div>
				  <div class="col-md-3">
				    <%= @commercial_unit.unit.available_by %>
				  </div>
				</div>

				<div class="row">
				  <div class="col-md-3">
				    <strong>Lease Term</strong>
				  </div>
				  <div class="col-md-3">
				  	<%= @commercial_unit.lease_term_months %> Months
				  </div>
				  <div class="col-md-3">
				    <strong>Listing ID</strong>
				  </div>
				  <div class="col-md-3">
				    <%= @commercial_unit.unit.listing_id %>
				  </div>
				</div>

				<div class="row">
				  <div class="col-md-3">
				    <strong>Is Sublease</strong>
				  </div>
				  <div class="col-md-3">
				  	<% if @commercial_unit.is_sublease %>
				    	Yes
				    <% else %>
				    	No
				    <% end %>
				  </div>
				  <!-- blank column -->
				</div>

				<br />
				<div class="row">
					<div class="col-md-12">
						<h3>Property Description</h3>
		    		<%= @commercial_unit.property_description %>
					</div>
				</div>

				<br />
				<div class="row">
					<div class="col-md-12">
						<h3>Location Description</h3>
		    		<%= @commercial_unit.location_description %>
					</div>
				</div>
		    
				<br />
	    	<div class="row">
	    		<div class="col-md-12">
	    			<!-- Nav tabs -->
				    <ul class="nav nav-tabs" role="tablist">
				      <li role="google-map-tab" class="active"><a href="#google-map-tab" aria-controls="google-map-tab" 
				      	role="tab" data-toggle="tab">Map</a></li>
				      <li role="walkscore"><a href="#walkscore" aria-controls="walkscore" role="tab" data-toggle="tab">Walkscore</a></li>
				    </ul>

	    			<div class="tab-content">
				      <!-- ******************** first tablpanel - google maps ******************** -->
				      <div role="tabpanel" class="tab-pane fade in active" id="google-map-tab">
				      	<div id="map_canvas" data-address="<%= @commercial_unit.unit.building.formatted_street_address %>"></div>
				      </div><!-- end tabpanel - google maps -->
				      <!-- ******************** first tabpanel - walkscore ********************-->
				      <div role="tabpanel" class="tab-pane fade center" id="walkscore">
				      	<script type='text/javascript'>
									var ws_wsid = 'e4004727da4a47a2bcb676b7abf930b6';
									var ws_address = '<%= @commercial_unit.unit.building.formatted_street_address %>';
									var ws_width = '600';
									var ws_height = '444';
									var ws_layout = 'horizontal';
									var ws_commute = 'true';
									var ws_transit_score = 'true';
									var ws_map_modules = 'all';
									</script><style type='text/css'>#ws-walkscore-tile{position:relative;text-align:left}#ws-walkscore-tile *{float:none;}#ws-foottext, #ws-footer a,#ws-footer a:link{font:11px/14px Verdana,Arial,Helvetica,sans-serif;margin-right:6px;white-space:nowrap;padding:0;color:#000;font-weight:bold;text-decoration:none}#ws-footer a:hover{color:#000;text-decoration:none}#ws-footer a:active{color:#b14900}</style><div id='ws-walkscore-tile'><div id='ws-footer' style='position:absolute;top:426px;left:8px;width:588px'><form id='ws-form'><span id='ws-foottext' style='float: left;'>Score <a id='ws-a' href='https://www.redfin.com/how-walk-score-works' target='_blank'>Your Home</a>: </span><input type='text' id='ws-street' style='position:absolute;top:0px;left:170px;width:386px' /><input type='image' id='ws-go' src='//cdn2.walk.sc/2/images/tile/go-btn.gif' height='15' width='26' border='0' alt='get my Walk Score' style='position:absolute;top:0px;right:0px' /></form></div></div><script type='text/javascript' src='https://www.walkscore.com/tile/show-walkscore-tile.php'></script>

    					</div><!-- end tabpanel - walkscore -->
    				</div>

	    			
	    		</div>
	    	</div><!-- row -->

		  </div><!-- panel-body-->
		</div><!-- panel -->
	</div><!-- col -->
</div><!-- row -->

  
  </div><!-- col -->
</div><!-- row -->

<%= render 'layouts/modals' %>

<!-- Print Modal: only on the show page -->
<div class="modal fade" id="printModal" tabindex="-1" role="dialog" 
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Generating Printable PDF</h4>
      </div>
      <div class="modal-body">
      	<div class="row">
        	<div class="col-md-12">
        		<p>Please be patient, generating pdfs will take a few moments. </p>
        		<br />
        	</div>
        </div>
        
      </div>
      <div class="modal-footer">
      	<%= link_to commercial_listing_path(@commercial_unit, :format => 'pdf'), class:"btn btn-warning link-as-button print-btn has-spinner" do %>
              <span class="spinner active"><i class="fa fa-refresh fa-spin"></i></span> Print PDF
            <% end %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

</div>