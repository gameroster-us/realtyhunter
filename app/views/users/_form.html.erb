<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <div class="field">
    <%= f.label :email, "Email (will be your username)" %><br>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :fname, "First name" %><br>
    <%= f.text_field :fname, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :lname, "Last name" %><br>
    <%= f.text_field :lname, class: 'form-control' %>
  </div>
  <!--div class="field">
    <%= f.label :profile_pic, class: 'form-control' %><br>
  </div-->
  <div class="field">
    <%= f.label "Give us your bio" %><br>
    <%= f.text_area :bio, class: 'form-control', :size => "20x10" %>
  </div>
  <div class="actions">
    <%= f.submit "Create my account", class: "btn btn-primary" %>
  </div>
<% end %>
