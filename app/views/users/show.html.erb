<% provide(:title, "Your Profile") %>

<div class="row">
  <div class="col-md-4">
    <section class="user_info">
      <%= avatar_for @user %>
    </section>
  </div>

  <div class="col-md-8">
    <div class="row">
      <div class="col-md-12">
        <h1><%= @user.name %></h1>
        <br />
        <%= link_to '(Edit)', edit_user_path(@user) %><br />
        <br />
      </div>
    </div>

    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Email:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.email %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Mobile:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.mobile_phone_number %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Bio:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.bio %>
      </div>
    </div>    
  </div>
</div>


