<% provide(:title, "Your Profile") %>

<div class="row">
  <div class="col-md-offset-3 col-md-3">
    <h1><%= @user.name.titleize %>'s profile</h1>
    <br />
  </div>
</div>
<div class="row">
  <div class="col-md-offset-3 col-md-3">
    <%= link_to '(Edit)', edit_user_path(@user) %><br />
    <br />
    <section class="user_info">
      <% if @user.avatar_id? %>
        <%= attachment_image_tag(@user, :avatar, :fill, 300, 300) %>
      <% else %>
        <td>
          <div class="user-avatar">
            <i class="fa fa-user fa-fw fa-border"></i>
          </div>
        </td>
      <% end %>
      
    </section>
  </div>

  <div class="col-md-6">
    <div class="row">
      <div class="col-md">
        <br />
        <br />
      </div>
    </div>

    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Title:</strong>
      </div>
      <div class="col-md-11">
        <!--%= @user.title %-->
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Office:</strong>
      </div>
      <div class="col-md-11">
        <!--%= @user.office %-->
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Manager:</strong>
      </div>
      <div class="col-md-11">
        <!--%= @user.manager %-->
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Email:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.email %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Mobile:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.mobile_phone_number %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Bio:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.bio %>
      </div>
    </div>    
  </div>
</div>


