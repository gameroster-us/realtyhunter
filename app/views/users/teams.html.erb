<% provide(:title, "#{@company.name.titleize}'s Teams") %>
<h1><%= @company.name.titleize %>'s Teams</h1>

<div class="row">
  <div class="col-md-12">
    
    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th>Manager</th>
          <th>Office</th>
          <th>Headcount</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user_subordinates_path(user) %></td>
          <td>
            <%= link_to user.office.name.titleize, company_office_path(user.office.company, user.office) %>
          </td>
          <td><%= user.subordinates.length %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>  
</div>
