
<div class="row">
  <div class="col-md-offset-3 col-md-3">
    <h1><%= @user.name.titleize %>'s profile</h1>
    <br />
  </div>
</div>
<div class="row">
  <div class="col-md-offset-3 col-md-3">
    <%= render 'actions', :user => @user %>
    <br />
    <br />
    <section class="user_info">
      <% if @user.avatar_id? %>
        <%= attachment_image_tag(@user, :avatar, :fill, 300, 300) %>
      <% else %>
        <td>
          <div class="user-avatar">
            <i class="fa fa-user fa-fw fa-border"></i>
          </div>
        </td>
      <% end %>
      
    </section>
  </div>

  <div class="col-md-6">
    <div class="row">
      <div class="col-md">
        <br />
        <br />
      </div>
    </div>

    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Title:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.employee_title.display_name %> 
        <% @sp = @user.agent_specialties; if @sp.length > 0 %> 
          | <%= @sp.join(", ") %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Company:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.company.name.titleize %> 
      </div>
    </div>
    <% if @user.office %>
    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Office:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.office.name %>
      </div>
    </div>
    <% end %>
    <% if @user.manager %>
      <div class="row">
        <div class="col-md-1">
          <strong class="pull-right">Manager:</strong>
        </div>
        <div class="col-md-11">
          <%= link_to @user.manager.name, @user.manager %>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Email:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.email %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Mobile:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.mobile_phone_number %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-1">
        <strong class="pull-right">Bio:</strong>
      </div>
      <div class="col-md-11">
        <%= @user.bio %>
      </div>
    </div>

    <% if @user.subordinates.length > 0 %>
      <div class="row">
        <div class="col-md-1">
          <strong class="pull-right">Team:</strong>
        </div>
        <div class="col-md-11">
          <% for subo in @user.subordinates %>
            <%= link_to subo.name, subo %><br />
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>
