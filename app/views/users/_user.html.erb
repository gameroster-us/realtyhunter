<tr class="<%= cycle('even', 'odd') -%>">
	<% if user.avatar_id? %>
		<td>
			<%= link_to attachment_image_tag(user, :avatar, :fill, 100, 100), 
			edit_user_path(user) %>
		</td>
	<% else %>
		<td>
			<div class="user-avatar-thumbnail">
				<i class="fa fa-user fa-fw fa-border"></i>
			</div>
		</td>
	<% end %>	
  
  <td><%= link_to user.name, user %></td>
  <td><%= user.email %></td>
  <td><% if user.activated? %>
  	<span class="glyphicon glyphicon-ok green" aria-hidden="true"></span>
  	<% else %>
  		<span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
  	<% end %>
  </td>
  <td><% if user.approved? %>
  		<span class="glyphicon glyphicon-ok green" aria-hidden="true"></span>
  	<% else %>
  		<span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
  	<% end %>
  </td>
  <td>
  	<%= link_to 'Edit', edit_user_path(user) %> | 
  	<%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
  	<% if current_user.can_approve(user) %>
  		<% if !user.approved? %>
	  		| <%= link_to 'Approve', admin_approve_user_path(user), method: :patch, data: { confirm: 'Are you sure you want to approve this person?' } %>
	  	<% else %>
	  		| <%= link_to 'Unapprove', admin_unapprove_user_path(user), method: :patch, data: { confirm: 'Are you sure you want to unapprove this person?' } %>
	  	<% end %>
	  <% end %>
		<% if current_user.can_kick(user) %>
	  	| <%= link_to 'Kick', admin_approve_user_path(user), method: :patch, data: { confirm: 'Are you sure you want to kick this person off the team?' } %>
	  <% end %>
		
	</td>
</tr>