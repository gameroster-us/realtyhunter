<tr class="<%= cycle('even', 'odd') -%>">
	<% if @user_images[user.id] %>
		<td>
      <div class="img-thumbnail">
        <%= link_to image_tag(@user_images[user.id], class: 'img-responsive',
          alt: @user_images[user.id]), user %>
      </div>
		</td>
	<% else %>
		<td class="img-col">
			<%= link_to image_tag("agent_soon_thumb.png".freeze, alt: "Agent image coming soon",
          class: 'img-responsive', size: "100x100"), user %>
		</td>
	<% end %>

  <td><%= link_to user.name, user %></td>
  <td><%= user.email %></td>
  <td>
    <%= employee_title_and_specialty(user) %>
  </td>
  <td>
    <%= link_to user.office_name, company_office_path(current_user.company_id, user.office_id) %>
  </td>
  <td>
    <%= last_login(user) %>
  </td>
  <td>
    <% if user.activated? %>
  	  <span class="glyphicon glyphicon-ok green text-center" aria-hidden="true"></span>
  	<% else %>
  		<span class="glyphicon glyphicon-remove red middle" aria-hidden="true"></span>
  	<% end %>
  </td>
  <td>
    <% if user.approved? %>
  		<span class="glyphicon glyphicon-ok green middle" aria-hidden="true"></span>
  	<% else %>
  		<span class="glyphicon glyphicon-remove red middle" aria-hidden="true"></span>
  	<% end %>
  </td>
  <td class="hidden-print">
    <%= render 'users/actions', user: user %>
	</td>
</tr>
