<script>
  $( document ).ready(function() {
      $('.agent-type').hide();
  });

  function title_onchange_handler(input) {
    if (input.toLowerCase() === '<%= @agent_title.name %>') {
      $('.agent-type').show();
    } else {
      $('.agent-type').hide();
    }
  };
</script>


<% provide(:title, 'Admin User Signup') %>

<div class="row">
  <div class="col-md-12">
    <h1><%= current_user.company.name.titleize %> - Admin Batch Signup</h1>
    
    <p>Users will be notified of their accounts immediately after creation.</p>

    <%= form_for(@users, :url => users_batch_create_path(@users), html: { class: "directUpload" }) do |f| %>
      <!--%= render :partial => 'shared/error_messages', 
      :locals => {:model => @building} %-->

      <%= f.fields_for :users do |builder| %>
        <%= render :partial => 'batch_add_user', :locals => {:builder => builder } %>
      <% end %> <!-- fields_for -->
  
      <p class="red"><strong>THIS LINK NOT FUNCTIONAL YET!!</strong></p>
      <%= link_to 'Add another row', users_batch_add_user_path, remote: true %>

      <br /><br />
      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
