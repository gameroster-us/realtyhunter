<% provide(:title, @title) %>
<h1><%= @title %></h1>

<div class="row">
  <div class="col-md-12">
    <!--%= link_to 'New User', new_user_path %-->
  </div>
</div>
<div class="row">
  <div class="col-md-2">
    <%= form_tag users_path, :method => 'get' do %>
      Search:
      <%= text_field_tag :search, params[:search], placeholder: "name/email", size: 50 %>
      <%= submit_tag "Go", :name => nil %>
      <%= link_to "Clear", users_path, class: 'btn btn-xs btn-default' %>
    <% end %>
  </div>
  <div class="col-md-offset-10">
    <%= will_paginate %>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    
    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th>Icon</th>
          <th>Name</th>
          <th>Email</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>

  </div>  
</div>

<div class="row">
  <div class="col-md-offset-10">
    <%= will_paginate %>
  </div>
</div>

