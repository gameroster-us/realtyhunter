<div id="users">

<div class="page-header">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @title %></h1>
    </div>
  </div>
</div>

<div id="user-search-filters" data-search-path="<%= filter_users_path %>"></div>
<%= form_tag users_path, :method => 'get' do %>
<div class="row vertical-padding">
  <div class="col-md-2">
    <%= label_tag :name_email, "Filter by name:" %>
  </div>
  <div class="col-md-3">
    <%= autocomplete_field_tag :name_email, params[:search],
      autocomplete_user_name_users_path,
      update_elements: {},
      placeholder: "Joe Smith",
      size: 30, class:'form-control' %>
  </div>
  <div class="col-md-1">
    <%= label_tag :status %>
  </div>
  <div class="col-md-2">
    <%= params[:status] %>
    <%= select_tag(:status,
      options_for_select(['Active', 'Deleted'],
        [params[:status].blank? ? 'Active' : params[:status]]),
      {class: "form-control",
      prompt: "Any"}) %>
  </div>
</div>

<div class="row vertical-padding">
  <div class="col-md-6 vertical-align2 totals">
  <br />
    <%= @users.total_count %> Users found &nbsp;&nbsp;
  </div>
  <div class="col-md-3 pull-right">
    <%= render partial: 'shared/pagination', locals: {models: @users} %>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Email</th>
          <th>Title</th>
          <th>Office</th>
          <th>Last Login</th>
          <th>
            <span class="has-tooltip" data-toggle="tooltip" title="Did the user click on the activation link that was emailed to them?">
            Activated?
            </span>
          </th>
          <th>
            <span class="has-tooltip" data-toggle="tooltip" title="Has an admin approved their account?">
              Account<br /> Authorized?
            </span>
          </th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody class="users_table_body">
        <%= render @users, :manager => nil %>
      </tbody>
    </table>

  </div>
</div>

<div class="row">
  <div class="col-md-offset-6 col-md-6 form-label-responsive">
    <%= render partial: 'shared/pagination', locals: {models: @users} %>
  </div>
</div>

</div>