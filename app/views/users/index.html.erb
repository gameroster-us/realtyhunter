<% provide(:title, 'All Users') %>
<h1>All users</h1>

<%= link_to 'New User', new_user_path %>

<%= will_paginate %>

<div class="row">
  <div class="col-md-12">
    
    <table class="table table-striped table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th>Icon</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>

  </div>  
</div>

<div class="row">
  <div class="col-md-12">
    <%= will_paginate %>
  </div>
</div>

