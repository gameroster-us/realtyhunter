<!-- company header -->
<table>
	<tr>
		<td>
			<%= image_tag @source_agent.company.image.file.url(:thumb),
      	alt: @source_agent.company.image.file.url(:thumb), align:"left" %>
		</td>
		<td style="min-width:200px;">
			<%= @source_agent.name %>
	    <% if !@source_agent.email.blank? %>
	      <br /><%= mail_to @source_agent.email, @source_agent.email, subject: 'Responding to Your Sent Listings' %>
	    <% end %>
	    <% if !@source_agent.mobile_phone_number.blank? %>
	      <br /><%= link_to @source_agent.mobile_phone_number, "tel:" + @source_agent.mobile_phone_number %>
	    <% end %>
		</td>
		<td>
			<% if @source_agent.image %>
				<%= image_tag @source_agent.image.file.url(:thumb),
  		    alt: @source_agent.image.file.url(:thumb) %>
  		<% end %>
		</td>
	</tr>
</table>

<hr />

<% if @message %>
	<p><%= @message %></p>
	<hr />
<% end %>

<!-- listings -->
<table>
	<% @roommates.each do |roomie| %>
		<tr>
		<div style="background-color:#E5E4E2; margin: 10px; padding: 10px; width: 85%;">
				<% if !roomie.upload_picture_of_yourself.blank? %>
					<%= image_tag roomie.upload_picture_of_yourself, alt: 'Roommate Photo',
							class: "img-responsive", width: "300" %>
				<% else %>
					- No photo provided -
				<% end %><br />
				<strong><%= roomie.name %></strong><br />
				<strong>e | </strong><%= mail_to roomie.email, roomie.email %><br />
				<strong>p | </strong><a href="tel:<%= roomie.phone_number %>"><%= roomie.phone_number %></a><br />

				<p><%= roomie.describe_yourself %></p>
				Monthly Budget: <%= roomie.monthly_budget %><br />
				Move In Date: <%= roomie.move_in_date %><br />
				Neighborhood: <%= roomie.neighborhood_name %><br />
				Dogs Allowed: <%= roomie.dogs_allowed ? 'Yes' : 'No' %><br />
				Cats Allowed: <%= roomie.cats_allowed ? 'Yes' : 'No' %><br />
			</div>
		</tr>
	<% end %>
</table>

<!-- footer -->
<hr />
<table>
	<tr>
		<td>
			<%= image_tag @source_agent.company.image.file.url(:thumb),
		    alt: @source_agent.company.image.file.url(:thumb), align:"left" %>
		</th>
		<td style="vertical-align: middle;">
			<b><%= @source_agent.company.name %></b>
			<br />
			<% if @source_agent.company.website %>
				<%= link_to @source_agent.company.website, @source_agent.company.website %>
			<% end %>
		</th>
	</tr>
</table>
