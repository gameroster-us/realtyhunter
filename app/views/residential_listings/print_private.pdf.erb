<div class="row">
  <div class="col-xs-12">

  	<div class="row">
  		<div class="col-xs-12">
  			<div class="page-header">

		  		<div class="row">
			  		<div class="col-xs-8">
							<h1><%= current_user.company.name %></h1>
			  		</div>
			  		<div class="col-xs-4 text-right">
			  			<br />
			  			<address>
				  			<strong><%= current_user.name %></strong><br />
				  			<abbr title="Phone">P:</abbr><%= current_user.mobile_phone_number %><br />
				  			<a href="mailto:#"><%= current_user.email %></a>
				  		</address>
		  			</div>
	  			</div>

	  		</div><!-- page-header -->

		    <div class="row">
	        <div class="col-xs-5">
            <% if @residential_unit.unit.images.length > 0 %>
  	          <%= image_tag @residential_unit.unit.images[0].file.url(:medium), :class => 'photo-inline', 
                alt: @residential_unit.unit.images[0].file.url(:medium), size:"100%" %>
              <br />
            <% else %>
              <!-- placeholder image -->
              <%= wicked_pdf_image_tag "listing_soon.png", alt: "Image coming soon",
                :class => 'img-responsive center-block' %>
            <% end %>
	        </div>
	        <div class="col-xs-7">
	        		<div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Address</strong>
                </div>
                <div class="col-xs-7">
                  <%= @residential_unit.street_address_and_unit %>
                </div>
	            </div>
	            <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Rent</strong>
                </div>
                <div class="col-xs-7">
              		<%= rent_formatted(@residential_unit.unit.rent) %>
                </div>
	            </div>
	            <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Beds / Baths</strong>
                </div>
                <div class="col-xs-7">
                  <%= @residential_unit.bed_and_baths %>
                </div>
	            </div>
	            <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Neighborhood</strong>
                </div>
                <div class="col-xs-7">
                  <%= @residential_unit.unit.building.neighborhood.name %>
                </div>
	            </div>

	            <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Access</strong>
                </div>
                <div class="col-xs-7">
                  <%= @residential_unit.unit.access_info %>
                </div>
	            </div>
	            
              <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>LL Pays %</strong>
                </div>
                <div class="col-xs-7">
                  <%= @residential_unit.op_fee_percentage %>
                </div>
	            </div>
              
              <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Tenant Pays %</strong>
                </div>
                <div class="col-xs-7">
                  <%= @residential_unit.tp_fee_percentage %>
                </div>
              </div>

	            <div class="row">
                <div class="col-xs-5 text-right">
                    <strong>Available</strong>
                </div>
                <div class="col-xs-7">
                  <% if @residential_unit.unit.available_by < Date.today %>
                    Now
                  <% else %>
                    <%= @residential_unit.unit.available_by %>
                  <% end %>
                </div>
	            </div>
	            <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Features</strong>
                </div>
                <div class="col-xs-7">
                  <%= @residential_unit.all_amenities_to_s %>
                </div>
	            </div>
	            <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Utilities</strong>
                </div>
                <div class="col-xs-7">
                  <%= @residential_unit.unit.building.utilities_to_s %>
                </div>
	            </div>

              <% if @residential_unit.unit.building.pet_policy %>
  	            <div class="row">
                  <div class="col-xs-5 text-right">
                    <strong>Pet policy</strong>
                  </div>
                  <div class="col-xs-7">
                    <%= pet_policy(@residential_unit) %>
                  </div>
  	            </div>
              <% end %>

	            <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Listing ID</strong>
                </div>
                <div class="col-xs-7">
                  <%= @residential_unit.unit.listing_id %>
                </div>
	            </div>
	        </div><!-- body -->

		  		<div class="row"><!-- footer -->
			  		<div class="col-xs-12">
			  			<hr >

			  			<div class="row">
			  				<div class="col-xs-6">
			  					<%= current_user.company.name %><br />
									<abbr title="Phone">P:</abbr><%= current_user.office.telephone %>
			  				</div>
			  				<div class="col-xs-6 text-right">
			  					<address>
						  			<%= current_user.name %><br />
						  			<abbr title="Phone">P:</abbr><%= current_user.mobile_phone_number %><br />
						  			<a href="mailto:#"><%= current_user.email %></a>
						  		</address>
			  				</div>
			  			</div>
		  			</div>
	  			</div><!-- end footer -->

	  	</div>
	  </div><!-- row -->

	</div><!-- end col-xs-12 -->
</div><!-- end row -->