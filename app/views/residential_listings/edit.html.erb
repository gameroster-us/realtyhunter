<% provide(:title, @residential_unit.unit.building.street_address +
		'#' + @residential_unit.unit.building_unit + ' - Editing') %>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="page-header">
		  <div class="row">
		    <div class="col-sm-8">
		      <h1>
		      	<%= @residential_unit.unit.building.street_address %>
		      	<small>#<%= @residential_unit.unit.building_unit %></small>
		      </h1>
		    </div>
		    <div class="col-sm-4 page-header-buttons-lg form-label-responsive">
					<%= link_to 'Show', @residential_unit %> |
					<%= link_to 'All units', residential_listings_path %>
		    </div>
		  </div>
			<div class="effect">
				<div align="center">
					<% if @residential_unit.unit.building.neighborhood %>
						<span style="font-size: 20px;">Neighborhood : <%= @residential_unit.unit.building.neighborhood.name %></span>
					<% end %>
				</div>
				<div align="center">
					<% if @residential_unit.unit.building.pet_policy %>
						<span style="font-size: 22px;">Pet Policy : <%= @residential_unit.unit.building.pet_policy.name %></span>
					<% end %>
				</div>
				<div align="center">
					<% if @residential_unit.unit.building.rental_term %>
						<span style="font-size: 22px;">Lease Term: : <%= @residential_unit.unit.building.rental_term.name %></span>
					<% end %>
				</div>
			</div>
		</div>

		<%= render 'form' %>

	</div>
</div>
