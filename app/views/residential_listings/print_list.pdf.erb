<!-- display company info -->
<div class="row">
			  		<div class="col-xs-8">
							<h1><%= current_user.company.name %></h1>
			  		</div>
			  		<div class="col-xs-4 text-right">
			  			<br />
			  			<address>
				  			<strong><%= current_user.name %></strong><br />
				  			<abbr title="Phone">P:</abbr><%= current_user.mobile_phone_number %><br />
				  			<a href="mailto:#"><%= current_user.email %></a>
				  		</address>
		  			</div>
	  			</div>


  <div class="row">
	  <div class="col-md-12">
	    <br />


	    <table class="table table-striped table-hover table-condensed splitForPrint new_section">
	        <tr class="heading1">
	          <th>Address</th>
	          <th>Landlord</th>
	          <th style="width: 20%;">Access</th>
	          <th>Beds / Baths</th>
	          <th>Available</th>
	          <th>Rent</th>
	          <th>Neighborhood</th>
	          <th style="width: 20%;">Features</th>
	        </tr>
	      <% @listings.each do |residential_unit| %>

	      	<tr class="<%= cycle('even', 'odd') -%>">
					  <td>
					    <%= residential_unit.street_address_and_unit %>
					    </td>
					  <td>
					    <%= residential_unit.code %>
					  </td>

					  <td style="width: 20%;"><%= residential_unit.access_info %></td>
					  <td><%= residential_unit.bed_and_baths %></td>
					  <td><%= residential_unit.available_by %></td>
					  <td><%= rent_formatted(residential_unit.rent) %></td>
					  <td>
					  	<%= residential_unit.neighborhood_name %>
					  </td>
					  <td>
						  <!-- %= residential_unit.building.amenities_to_s %-->
						  <!--%= residential_unit.amenities_to_s %-->
					  </td>
					</tr>

				<% end %>
	    </table>
	  </div>
	</div>


	</div><!-- end col-xs-12 -->
</div><!-- end row -->



<div class="row">
  <div class="col-xs-12">

  	<div class="row">
  		<div class="col-xs-12">
  			<div class="page-header">


	  		</div><!-- page-header -->

		    <div class="row">
	        <div class="col-xs-5">
            <% if listing.unit.images.length > 0 %>
  	          <%= image_tag listing.unit.images[0].file.url(:large), :class => 'photo-inline',
                alt: listing.unit.images[0].file.url(:large), size:"100%" %>
              <br />
            <% else %>
              <!-- placeholder image -->
              <%= wicked_pdf_image_tag "listing_soon.png", alt: "Image coming soon",
                :class => 'img-responsive center-block' %>
            <% end %>
	        </div>
	        <div class="col-xs-7">
	        		<div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Neighborhood</strong>
                </div>
                <div class="col-xs-7">
                  <%= listing.unit.building.neighborhood.name %>
                </div>
	            </div>

              <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>LL Pays %</strong>
                </div>
                <div class="col-xs-7">
                  <%= listing.op_fee_percentage %>
                </div>
	            </div>

              <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Tenant Pays %</strong>
                </div>
                <div class="col-xs-7">
                  <%= listing.tp_fee_percentage %>
                </div>
              </div>

	            <div class="row">
                <div class="col-xs-5 text-right">
                  <strong>Listing ID</strong>
                </div>
                <div class="col-xs-7">
                  <%= listing.unit.listing_id %>
                </div>
	            </div>
	        </div><!-- body -->

		  		<div class="row"><!-- footer -->
			  		<div class="col-xs-12">
			  			<hr >

			  			<div class="row">
			  				<div class="col-xs-6">
			  					<%= current_user.company.name %><br />
									<abbr title="Phone">P:</abbr><%= current_user.office.telephone %>
			  				</div>
			  				<div class="col-xs-6 text-right">
			  					<address>
						  			<%= current_user.name %><br />
						  			<abbr title="Phone">P:</abbr><%= current_user.mobile_phone_number %><br />
						  			<a href="mailto:#"><%= current_user.email %></a>
						  		</address>
			  				</div>
			  			</div>
		  			</div>
	  			</div><!-- end footer -->

	  	</div>
	  </div><!-- row -->

	</div><!-- end col-xs-12 -->
</div><!-- end row -->
