<%= form_for(residential_unit, url: take_off_residential_listing_path(@residential_unit), remote: true) do |f| %>

	<div class="modal-body">
		<p>Taking this unit off the market means it cannot be advertised, syndicated, or shared.</p>

		<p>Are you sure you want take off 
			<strong><%= @residential_unit.unit.building.street_address %> #<%= @residential_unit.unit.building_unit %></strong>?</p>
		<br />
		
		<div class="field">
			<%= f.label :available_by, "Update new lease end date:" %>
			<div class='input-group date datepicker'>
        <%= f.text_field :available_by, params[:available_by], 
          placeholder: "Available", class:"form-control", size:30 %>
        <label class="input-group-addon btn" for="date">
          <span class="fa fa-calendar open-datepicker"></span>
        </label>
      </div>
	  </div>
	</div>
	<div class="modal-footer">
		<%= f.submit 'Take off market', class: 'btn btn-danger submit-link' %>
	  <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
	</div>

<% end %>
