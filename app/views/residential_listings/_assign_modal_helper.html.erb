<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<p>
			You've selected the following listings:
		</p>
		<p>
			<%= @listings.map(&:street_address_and_unit).join("<br />").html_safe %>
		</p>
	</div>
</div>

<br />
<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<strong>Pick a new primary agent:</strong>
	</div>
</div>
<div class="row">
	<div class="col-md-8 col-md-offset-1">
		<%= select_tag(:primary_agent_id, 
		  options_for_select(current_user.company.users.unarchived.collect {|u| [u.name, u.id]},
		    []), 
		  {prompt: "Choose one...",
		  class: 'form-control'}) %>
	</div>
</div>

<%= hidden_field_tag "listing_ids", params[:listing_ids] %>