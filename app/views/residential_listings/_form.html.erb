      <%# if current_user.is_photo_manager? %>
        <!-- <div role="tabpanel" class="tab-pane fade in active" id="photos"> -->
      <%# else %>
        <div role="tabpanel" class="tab-pane fade" id="photos">
      <%# end %>
          <% if @residential_unit.id %>

