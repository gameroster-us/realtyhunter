<div id="footer-mobile-show" class="hidden">
  <div class="nav-button-wrapper">
    <!-- Button trigger modal -->
    <button type="button" class="nav-button" data-toggle="modal" data-target="#emailListing">
      <i class="resShow-mobileEmailIcon fa fa-envelope fa-3x"></i>
    </button>

    <a class="nav-button"
      href="https://maps.google.com?daddr=<%= @residential_unit.unit.building.formatted_street_address %>">
      <i class="fa fa-car fa-3x"></i>
    </a>

  </div>
</div>

<!-- Email Modal -->
<div class="modal fade modal-fullscreen" id="emailListing" tabindex="-1" role="dialog"
  aria-labelledby="emailListing" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag(send_listings_residential_listings_path, remote:true) do %>
      <div class="modal-body">

        <div class="row vertical-padding">
          <div class="col-md-12">
            <%= label_tag "residential_listing[recipients]", "Recipients", class: 'required' %>
            <i><small>Use commas to separate email addresses</small></i>
            <%= text_field_tag "residential_listing[recipients]", nil, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="row vertical-padding">
          <div class="col-md-12">
            <%= label_tag "residential_listing[title]", "Title", class: 'required' %>
            <%= text_field_tag "residential_listing[title]", "Check out this great listing!", class: 'form-control', required: true %>
          </div>
        </div>

        <div class="row vertical-padding">
          <div class="col-md-12">
            <%= label_tag "residential_listing[message]", "Message" %>
            <%= text_area_tag "residential_listing[message]", nil, class: 'form-control' %>
          </div>
        </div>

        <%= hidden_field_tag "residential_listing[listing_ids]", @residential_unit.unit.listing_id %>

      </div><!-- modal-body -->
      <div class="modal-footer">
        <%= submit_tag "Send Email", class:"btn btn-warning" %>
        <button type="button" class="btn btn-default horizontal-padding" data-dismiss="modal">Cancel</button>&nbsp;&nbsp;
      </div>

      <% end %>

    </div>
  </div>
</div>
